                <% if (organicVendor && organicVendor._id) { %>
                    frame.src = '/organic-vendors/<%= organicVendor._id %>/operations-profile';
                <% } %>
                viewer.style.display = 'block';
            } else {
                viewer.style.display = 'none';
                frame.src = '';
            }
        }

        // View organic document from Documents tab (opens in new window)
        function viewOrganicDocument(docType, organicVendorId) {
            const url = `/organic-vendors/${organicVendorId}/${docType}`;
            window.open(url, '_blank');
        }

        // View PO inline (expand row to show details)
        async function viewPOInline(poId, poNumber) {
            const detailsRow = document.getElementById('po-details-' + poId);
            
            // Toggle if already open
            if (detailsRow.style.display === 'table-row') {
                detailsRow.style.display = 'none';
                return;
            }
            
            // Show the row with spinner
            detailsRow.style.display = 'table-row';
            
            try {
                // Fetch line items for this PO
                const response = await fetch(`/purchase-orders/${poId}/line-items`);
                const lineItems = await response.json();
                
                // Build the inline view HTML
                let html = `
                    <div style="padding: 20px; background: white; border-left: 4px solid #667eea;">
                        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
                            <h4 style="margin: 0; color: #2c3e50;">
                                <i class="fas fa-box-open"></i> ${poNumber} - Line Items
                            </h4>
                            <button onclick="document.getElementById('po-details-${poId}').style.display='none'" 
                                    class="btn btn-sm btn-outline-secondary">
                                <i class="fas fa-times"></i> Close
                            </button>
                        </div>
                        
                        ${lineItems.length === 0 ? 
                            '<p style="color: #6c757d; text-align: center; padding: 20px;">No line items found</p>' :
                            `<div style="overflow-x: auto;">
                                <table class="table table-sm table-hover" style="margin: 0;">
                                    <thead style="background: #f8f9fa;">
                                        <tr>
                                            <th>Item</th>
                                            <th>Description</th>
                                            <th>Quantity</th>
                                            <th>Unit Price</th>
                                            <th>Total</th>
                                            <th>Status</th>
                                            <th>ETA</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        ${lineItems.map(item => `
                                            <tr>
                                                <td><strong>${item.itemName || 'N/A'}</strong></td>
                                                <td style="max-width: 300px; overflow: hidden; text-overflow: ellipsis;">${item.description || '-'}</td>
                                                <td>${item.quantity || 0}</td>
                                                <td>$${parseFloat(item.unitPrice || 0).toFixed(2)}</td>
                                                <td>$${parseFloat(item.total || 0).toFixed(2)}</td>
                                                <td><span class="badge badge-info">${item.status || 'Pending'}</span></td>
                                                <td>${item.eta ? new Date(item.eta).toLocaleDateString() : '-'}</td>
                                            </tr>
                                        `).join('')}
                                    </tbody>
                                </table>
                            </div>`
                        }
                    </div>
                `;
                
                detailsRow.querySelector('td').innerHTML = html;
                
            } catch (error) {
                console.error('Error fetching PO details:', error);
                detailsRow.querySelector('td').innerHTML = `
                    <div style="padding: 20px; text-align: center; color: #dc3545;">
                        <i class="fas fa-exclamation-triangle"></i>
                        <p>Error loading PO details. Please try again.</p>
                    </div>
                `;
            }
        }

        // View all POs inline
        function viewAllInline() {
            const poRows = document.querySelectorAll('[data-po-id]');
            poRows.forEach(row => {
                const poId = row.getAttribute('data-po-id');
                const poNumber = row.getAttribute('data-po-number');
                viewPOInline(poId, poNumber);
            });
        }

