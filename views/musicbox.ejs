<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MusicBox - Media Library</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
        }

        .header {
            background: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 8px 32px rgba(0,0,0,0.1);
            margin-bottom: 30px;
        }

        .header h1 {
            color: #667eea;
            font-size: 2.5rem;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .header-actions {
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
            align-items: center;
            margin-top: 20px;
            justify-content: space-between;
        }

        .header-actions-left {
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
        }

        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: #667eea;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 14px;
            position: relative;
            cursor: pointer;
            transition: all 0.2s ease;
        }

        .user-avatar:hover {
            transform: scale(1.05);
            box-shadow: 0 2px 8px rgba(102, 126, 234, 0.3);
        }

        .user-dropdown {
            position: relative;
        }

        .user-dropdown-content {
            display: none;
            position: absolute;
            top: 100%;
            right: 0;
            background-color: white;
            min-width: 280px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            border-radius: 8px;
            z-index: 1001;
            border: 1px solid #dee2e6;
            margin-top: 10px;
        }

        .user-dropdown-content.show {
            display: block;
        }

        .user-dropdown-header {
            padding: 20px;
            border-bottom: 1px solid #e9ecef;
            background: white;
            border-radius: 8px 8px 0 0;
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .user-avatar-large {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background: #667eea;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 24px;
            flex-shrink: 0;
        }

        .user-dropdown-item {
            padding: 14px 20px;
            color: #495057;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 12px;
            transition: all 0.2s ease;
            font-size: 15px;
            border: none;
            background: white;
            width: 100%;
            text-align: left;
            cursor: pointer;
        }

        .user-dropdown-item:hover {
            background: #f8f9fa;
        }

        .user-dropdown-item:last-child {
            border-radius: 0 0 8px 8px;
        }

        .user-dropdown-item.logout {
            color: #dc3545;
            border-top: 1px solid #e9ecef;
        }

        .user-dropdown-item.logout:hover {
            background: #fff5f5;
        }

        .dropdown-icon {
            font-size: 18px;
            width: 20px;
            display: inline-block;
            text-align: center;
        }

        .dropdown-divider {
            height: 1px;
            background: #e9ecef;
            margin: 0;
        }

        .user-role {
            color: #6c757d;
            font-size: 0.875rem;
            display: block;
        }

        .user-status {
            color: #28a745;
            font-size: 0.875rem;
            display: block;
        }

        .btn {
            padding: 12px 24px;
            border: none;
            border-radius: 8px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 20px rgba(102, 126, 234, 0.4);
        }

        .btn-secondary {
            background: #6c757d;
            color: white;
        }

        .btn-secondary:hover {
            background: #5a6268;
        }

        .filters {
            background: white;
            padding: 20px;
            border-radius: 15px;
            box-shadow: 0 4px 16px rgba(0,0,0,0.1);
            margin-bottom: 30px;
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
            align-items: center;
        }

        .filter-group {
            display: flex;
            flex-direction: column;
            gap: 5px;
        }

        .filter-group label {
            font-size: 0.875rem;
            color: #6c757d;
            font-weight: 600;
        }

        .filter-group input,
        .filter-group select {
            padding: 10px 15px;
            border: 2px solid #e9ecef;
            border-radius: 8px;
            font-size: 1rem;
            transition: border-color 0.3s;
        }

        .filter-group input:focus,
        .filter-group select:focus {
            outline: none;
            border-color: #667eea;
        }

        .stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: white;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 4px 16px rgba(0,0,0,0.1);
            text-align: center;
        }

        .stat-card .icon {
            font-size: 2.5rem;
            margin-bottom: 10px;
        }

        .stat-card .label {
            color: #6c757d;
            font-size: 0.875rem;
            margin-bottom: 5px;
        }

        .stat-card .value {
            color: #667eea;
            font-size: 2rem;
            font-weight: bold;
        }

        .media-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 25px;
        }

        .media-card {
            background: white;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 4px 16px rgba(0,0,0,0.1);
            transition: transform 0.3s, box-shadow 0.3s;
            cursor: pointer;
        }

        .media-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 32px rgba(0,0,0,0.15);
        }

        .media-card .media-type {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 40px 20px;
            text-align: center;
            font-size: 4rem;
        }

        .media-card .media-info {
            padding: 20px;
        }

        .media-card .song-name {
            font-size: 1.25rem;
            font-weight: bold;
            color: #2d3748;
            margin-bottom: 5px;
        }

        .media-card .artist {
            color: #667eea;
            font-size: 1rem;
            margin-bottom: 10px;
        }

        .media-card .meta {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            margin-top: 15px;
            padding-top: 15px;
            border-top: 1px solid #e9ecef;
        }

        .media-card .meta-item {
            font-size: 0.875rem;
            color: #6c757d;
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .media-card .actions {
            display: flex;
            gap: 10px;
            margin-top: 15px;
        }

        .media-card .btn-small {
            padding: 8px 16px;
            font-size: 0.875rem;
            flex: 1;
        }

        .favorite {
            color: #ffc107;
            font-size: 1.5rem;
            position: absolute;
            top: 10px;
            right: 10px;
        }

        .empty-state {
            background: white;
            padding: 60px 40px;
            border-radius: 15px;
            text-align: center;
            box-shadow: 0 4px 16px rgba(0,0,0,0.1);
        }

        .empty-state .icon {
            font-size: 5rem;
            margin-bottom: 20px;
            opacity: 0.5;
        }

        .empty-state h2 {
            color: #2d3748;
            margin-bottom: 10px;
        }

        .empty-state p {
            color: #6c757d;
            margin-bottom: 30px;
        }

        /* Modal styles */
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.7);
            z-index: 1000;
            padding: 20px;
            overflow-y: auto;
        }

        .modal-content {
            background: white;
            max-width: 900px;
            margin: 50px auto;
            border-radius: 15px;
            padding: 30px;
            position: relative;
        }

        .modal-close {
            position: absolute;
            top: 20px;
            right: 20px;
            background: none;
            border: none;
            font-size: 2rem;
            cursor: pointer;
            color: #6c757d;
        }

        .media-player {
            width: 100%;
            margin: 20px 0;
            border-radius: 8px;
        }

        .detail-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin: 20px 0;
        }

        .detail-item {
            padding: 15px;
            background: #f8f9fa;
            border-radius: 8px;
        }

        .detail-item label {
            font-weight: 600;
            color: #6c757d;
            font-size: 0.875rem;
            display: block;
            margin-bottom: 5px;
        }

        .detail-item .value {
            color: #2d3748;
            font-size: 1rem;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>üéµ MusicBox</h1>
            <p style="color: #6c757d; margin-bottom: 20px;">Your personal media library</p>
            <div class="header-actions">
                <div class="header-actions-left">
                    <a href="/musicbox/upload" class="btn btn-primary">
                        üì§ Upload Media
                    </a>
                    <a href="/" class="btn btn-secondary">
                        üè† Back to Dashboard
                    </a>
                </div>
                
                <!-- User Info with Dropdown -->
                <% if (typeof user !== 'undefined' && user) { %>
                    <div class="user-dropdown">
                        <div class="user-avatar" onclick="toggleUserDropdown()">
                            <%= user.firstName ? user.firstName.charAt(0).toUpperCase() : 'U' %>
                            <%= user.lastName ? user.lastName.charAt(0).toUpperCase() : '' %>
                        </div>
                        <div id="userDropdown" class="user-dropdown-content">
                            <div class="user-dropdown-header">
                                <div class="user-avatar-large">
                                    <%= user.firstName ? user.firstName.charAt(0).toUpperCase() : '' %>
                                    <%= user.lastName ? user.lastName.charAt(0).toUpperCase() : '' %>
                                </div>
                                <div class="user-info">
                                    <strong><%= user.firstName %> <%= user.lastName %></strong>
                                    <small class="user-role"><%= user.role %></small>
                                    <small class="user-status">‚óè Online</small>
                                </div>
                            </div>
                            
                            <!-- Admin Tools (only for admins and managers) -->
                            <% if (user.role === 'admin' || user.role === 'manager') { %>
                            <div class="user-dropdown-header" style="padding: 8px 15px; font-size: 12px; color: #6c757d;">
                                Admin Tools
                            </div>
                            <a href="/auth/admin/users" class="user-dropdown-item">
                                <span class="dropdown-icon">üë•</span> User Management
                            </a>
                            <a href="/auth/admin/audit-logs" class="user-dropdown-item">
                                <span class="dropdown-icon">üîÑ</span> Audit Logs
                            </a>
                            <a href="/auth/admin/test-email" class="user-dropdown-item">
                                <span class="dropdown-icon">‚úâÔ∏è</span> Test Email
                            </a>
                            <div class="dropdown-divider"></div>
                            <% } %>
                            
                            <!-- Other Modules -->
                            <div class="user-dropdown-header" style="padding: 8px 15px; font-size: 12px; color: #6c757d;">
                                Other Modules
                            </div>
                            <a href="/purchase-orders" class="user-dropdown-item">
                                <span class="dropdown-icon">üì¶</span> Purchase Orders
                            </a>
                            <a href="/story/dashboard" class="user-dropdown-item">
                                <span class="dropdown-icon">üìñ</span> Story
                            </a>
                            <a href="/medicine/dashboard" class="user-dropdown-item">
                                <span class="dropdown-icon">üíä</span> Medicine
                            </a>
                            <a href="/bulletin" class="user-dropdown-item">
                                <span class="dropdown-icon">üìå</span> Bulletin
                            </a>
                            <a href="/grocery/dashboard" class="user-dropdown-item">
                                <span class="dropdown-icon">üõí</span> Grocery
                            </a>
                            
                            <div class="dropdown-divider"></div>
                            <form action="/auth/logout" method="POST" style="margin: 0;">
                                <button type="submit" class="user-dropdown-item logout" style="border: none; background: none; width: 100%; text-align: left;">
                                    <span class="dropdown-icon">üö™</span> Logout
                                </button>
                            </form>
                        </div>
                    </div>
                <% } else { %>
                    <a href="/auth/login" class="btn btn-primary btn-sm">Login</a>
                <% } %>
            </div>
        </div>

        <div class="stats" id="statsContainer">
            <div class="stat-card">
                <div class="icon">üéµ</div>
                <div class="label">Total Media</div>
                <div class="value" id="totalMedia">-</div>
            </div>
            <div class="stat-card">
                <div class="icon">üéß</div>
                <div class="label">Audio Files</div>
                <div class="value" id="totalAudio">-</div>
            </div>
            <div class="stat-card">
                <div class="icon">üé¨</div>
                <div class="label">Video Files</div>
                <div class="value" id="totalVideo">-</div>
            </div>
            <div class="stat-card">
                <div class="icon">‚ñ∂Ô∏è</div>
                <div class="label">Total Plays</div>
                <div class="value" id="totalPlays">-</div>
            </div>
        </div>

        <div class="filters">
            <div class="filter-group">
                <label>Search</label>
                <input type="text" id="searchInput" placeholder="Search songs, artists..." value="<%= filters.search || '' %>">
            </div>
            <div class="filter-group">
                <label>Type</label>
                <select id="typeFilter">
                    <option value="">All Types</option>
                    <option value="audio" <%= filters.type === 'audio' ? 'selected' : '' %>>Audio</option>
                    <option value="video" <%= filters.type === 'video' ? 'selected' : '' %>>Video</option>
                </select>
            </div>
            <div class="filter-group">
                <label>Sort By</label>
                <select id="sortByFilter">
                    <option value="uploadedAt" <%= filters.sortBy === 'uploadedAt' ? 'selected' : '' %>>Upload Date</option>
                    <option value="songName" <%= filters.sortBy === 'songName' ? 'selected' : '' %>>Song Name</option>
                    <option value="artist" <%= filters.sortBy === 'artist' ? 'selected' : '' %>>Artist</option>
                    <option value="playCount" <%= filters.sortBy === 'playCount' ? 'selected' : '' %>>Play Count</option>
                </select>
            </div>
            <div class="filter-group">
                <label>Order</label>
                <select id="sortOrderFilter">
                    <option value="desc" <%= filters.sortOrder === 'desc' ? 'selected' : '' %>>Descending</option>
                    <option value="asc" <%= filters.sortOrder === 'asc' ? 'selected' : '' %>>Ascending</option>
                </select>
            </div>
            <button class="btn btn-primary" onclick="applyFilters()" style="margin-top: 20px;">Apply Filters</button>
        </div>

        <% if (mediaItems.length === 0) { %>
            <div class="empty-state">
                <div class="icon">üéµ</div>
                <h2>No media files yet</h2>
                <p>Start building your music library by uploading your first audio or video file</p>
                <a href="/musicbox/upload" class="btn btn-primary">Upload First Media</a>
            </div>
        <% } else { %>
            <div class="media-grid">
                <% mediaItems.forEach(item => { %>
                    <div class="media-card" onclick="viewMedia('<%= item._id %>')">
                        <% if (item.isFavorite) { %>
                            <div class="favorite">‚≠ê</div>
                        <% } %>
                        <div class="media-type">
                            <%= item.isLinked ? 'üîó' : (item.fileType === 'audio' ? 'üéß' : 'üé¨') %>
                        </div>
                        <div class="media-info">
                            <div class="song-name"><%= item.songName %></div>
                            <div class="artist">üé§ <%= item.artist %></div>
                            <% if (item.composer) { %>
                                <div class="meta-item">‚úçÔ∏è <%= item.composer %></div>
                            <% } %>
                            <div class="meta">
                                <% if (item.isLinked) { %>
                                    <div class="meta-item" style="color: #667eea; font-weight: 500;">
                                        üîó External Link
                                    </div>
                                <% } %>
                                <div class="meta-item">
                                    üìÖ <%= new Date(item.uploadedAt).toLocaleDateString() %>
                                </div>
                                <div class="meta-item">
                                    üë§ <%= item.uploadedBy %>
                                </div>
                                <div class="meta-item">
                                    ‚ñ∂Ô∏è <%= item.playCount %> plays
                                </div>
                                <% if (item.location) { %>
                                    <div class="meta-item">
                                        üìç <%= item.location %>
                                    </div>
                                <% } %>
                            </div>
                            <div class="actions" onclick="event.stopPropagation()">
                                <button class="btn btn-primary btn-small" onclick="playMedia('<%= item._id %>')">
                                    <%= item.isLinked ? 'üîó Open' : '‚ñ∂Ô∏è Play' %>
                                </button>
                                <button class="btn btn-secondary btn-small" onclick="toggleFavorite('<%= item._id %>')">
                                    <%= item.isFavorite ? '‚≠ê' : '‚òÜ' %>
                                </button>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } %>
    </div>

    <!-- Media Details Modal -->
    <div id="mediaModal" class="modal">
        <div class="modal-content">
            <button class="modal-close" onclick="closeModal()">&times;</button>
            <div id="modalContent"></div>
        </div>
    </div>

    <script>
        // Load statistics
        async function loadStats() {
            try {
                const response = await fetch('/musicbox/api/stats');
                const data = await response.json();
                
                if (data.success) {
                    document.getElementById('totalMedia').textContent = data.stats.totalMedia;
                    document.getElementById('totalAudio').textContent = data.stats.totalAudio;
                    document.getElementById('totalVideo').textContent = data.stats.totalVideo;
                    document.getElementById('totalPlays').textContent = data.stats.totalPlays;
                }
            } catch (error) {
                console.error('Error loading stats:', error);
            }
        }

        // Apply filters
        function applyFilters() {
            const search = document.getElementById('searchInput').value;
            const type = document.getElementById('typeFilter').value;
            const sortBy = document.getElementById('sortByFilter').value;
            const sortOrder = document.getElementById('sortOrderFilter').value;
            
            const params = new URLSearchParams();
            if (search) params.set('search', search);
            if (type) params.set('type', type);
            params.set('sortBy', sortBy);
            params.set('sortOrder', sortOrder);
            
            window.location.href = '/musicbox?' + params.toString();
        }

        // View media details
        async function viewMedia(id) {
            try {
                const response = await fetch(`/musicbox/media/${id}`);
                const data = await response.json();
                
                if (data.success) {
                    const item = data.mediaItem;
                    const mediaTag = item.fileType === 'audio' ? 'audio' : 'video';
                    const isLinked = item.isLinked || false;
                    
                    // Check if URL is embeddable (YouTube, Vimeo, direct media files)
                    let embedHtml = '';
                    if (isLinked) {
                        const url = item.externalUrl;
                        const urlLower = url.toLowerCase();
                        
                        // YouTube embed
                        if (url.includes('youtube.com') || url.includes('youtu.be')) {
                            let videoId = '';
                            if (url.includes('youtu.be/')) {
                                videoId = url.split('youtu.be/')[1].split(/[?&]/)[0];
                            } else if (url.includes('youtube.com')) {
                                const urlParams = new URLSearchParams(url.split('?')[1]);
                                videoId = urlParams.get('v');
                            }
                            if (videoId) {
                                embedHtml = `
                                    <div style="position: relative; padding-bottom: 56.25%; height: 0; overflow: hidden; margin-bottom: 20px;">
                                        <iframe src="https://www.youtube.com/embed/${videoId}" 
                                                style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; border: 0; border-radius: 10px;"
                                                allowfullscreen></iframe>
                                    </div>`;
                            }
                        }
                        // Vimeo embed
                        else if (url.includes('vimeo.com')) {
                            const vimeoId = url.split('vimeo.com/')[1]?.split(/[?&/]/)[0];
                            if (vimeoId) {
                                embedHtml = `
                                    <div style="position: relative; padding-bottom: 56.25%; height: 0; overflow: hidden; margin-bottom: 20px;">
                                        <iframe src="https://player.vimeo.com/video/${vimeoId}" 
                                                style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; border: 0; border-radius: 10px;"
                                                allowfullscreen></iframe>
                                    </div>`;
                            }
                        }
                        // Direct media files (mp3, mp4, etc.)
                        else if (urlLower.match(/\.(mp3|mp4|wav|ogg|webm|m4a)(\?|$)/)) {
                            const tag = urlLower.match(/\.(mp4|webm)(\?|$)/) ? 'video' : 'audio';
                            embedHtml = `
                                <${tag} controls class="media-player" src="${item.externalUrl}" style="margin-bottom: 20px;">
                                    Your browser does not support the ${tag} tag.
                                </${tag}>`;
                        }
                        // Generic iframe for other URLs
                        else {
                            embedHtml = `
                                <div style="position: relative; height: 400px; margin-bottom: 20px;">
                                    <iframe src="${item.externalUrl}" 
                                            style="width: 100%; height: 100%; border: 0; border-radius: 10px;"
                                            sandbox="allow-scripts allow-same-origin"></iframe>
                                </div>`;
                        }
                    }
                    
                    document.getElementById('modalContent').innerHTML = `
                        <h2>${item.songName}</h2>
                        <p style="color: #667eea; font-size: 1.2rem; margin-bottom: 20px;">${item.artist}</p>
                        
                        ${isLinked ? `
                            <div style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); padding: 15px; border-radius: 10px; margin-bottom: 20px;">
                                <div style="display: flex; align-items: center; justify-content: space-between; gap: 10px;">
                                    <p style="color: white; margin: 0;">üîó External Link</p>
                                    <a href="${item.externalUrl}" target="_blank" rel="noopener noreferrer" 
                                       class="btn btn-primary" 
                                       style="background: white; color: #667eea; padding: 8px 16px; font-size: 0.9rem;">
                                        üåê Open in New Tab
                                    </a>
                                </div>
                            </div>
                            ${embedHtml}
                        ` : `
                            <${mediaTag} controls class="media-player" src="/musicbox/stream/${item._id}">
                                Your browser does not support the ${item.fileType} tag.
                            </${mediaTag}>
                        `}
                        
                        <div class="detail-grid">
                            <div class="detail-item">
                                <label>Song Name</label>
                                <div class="value">${item.songName}</div>
                            </div>
                            <div class="detail-item">
                                <label>Artist</label>
                                <div class="value">${item.artist}</div>
                            </div>
                            ${item.composer ? `
                            <div class="detail-item">
                                <label>Composer</label>
                                <div class="value">${item.composer}</div>
                            </div>` : ''}
                            ${item.genre ? `
                            <div class="detail-item">
                                <label>Genre</label>
                                <div class="value">${item.genre}</div>
                            </div>` : ''}
                            ${item.location ? `
                            <div class="detail-item">
                                <label>Location</label>
                                <div class="value">${item.location}</div>
                            </div>` : ''}
                            ${item.recordingDate ? `
                            <div class="detail-item">
                                <label>Recording Date</label>
                                <div class="value">${new Date(item.recordingDate).toLocaleDateString()}</div>
                            </div>` : ''}
                            ${isLinked ? `
                            <div class="detail-item">
                                <label>External URL</label>
                                <div class="value"><a href="${item.externalUrl}" target="_blank" rel="noopener noreferrer" style="color: #667eea;">${item.externalUrl}</a></div>
                            </div>` : `
                            <div class="detail-item">
                                <label>File Size</label>
                                <div class="value">${item.formattedFileSize}</div>
                            </div>`}
                            <div class="detail-item">
                                <label>Uploaded By</label>
                                <div class="value">${item.uploadedBy}</div>
                            </div>
                            <div class="detail-item">
                                <label>Upload Date</label>
                                <div class="value">${new Date(item.uploadedAt).toLocaleString()}</div>
                            </div>
                            <div class="detail-item">
                                <label>Play Count</label>
                                <div class="value">${item.playCount} times</div>
                            </div>
                        </div>
                        
                        ${item.description ? `
                        <div class="detail-item" style="grid-column: 1 / -1; margin-top: 20px;">
                            <label>Description</label>
                            <div class="value">${item.description}</div>
                        </div>` : ''}
                        
                        <div style="display: flex; gap: 10px; margin-top: 30px;">
                            <button class="btn btn-secondary" onclick="deleteMedia('${item._id}')">
                                üóëÔ∏è Delete
                            </button>
                            <button class="btn btn-secondary" onclick="toggleFavorite('${item._id}')">
                                ${item.isFavorite ? '‚≠ê Remove from Favorites' : '‚òÜ Add to Favorites'}
                            </button>
                        </div>
                    `;
                    
                    document.getElementById('mediaModal').style.display = 'block';
                }
            } catch (error) {
                console.error('Error loading media:', error);
                alert('Error loading media details');
            }
        }

        // Play media
        function playMedia(id) {
            viewMedia(id);
        }

        // Toggle favorite
        async function toggleFavorite(id) {
            try {
                const response = await fetch(`/musicbox/media/${id}/favorite`, {
                    method: 'POST'
                });
                const data = await response.json();
                
                if (data.success) {
                    window.location.reload();
                }
            } catch (error) {
                console.error('Error toggling favorite:', error);
                alert('Error updating favorite status');
            }
        }

        // Delete media
        async function deleteMedia(id) {
            if (!confirm('Are you sure you want to delete this media? This action cannot be undone.')) {
                return;
            }
            
            try {
                const response = await fetch(`/musicbox/media/${id}`, {
                    method: 'DELETE'
                });
                const data = await response.json();
                
                if (data.success) {
                    closeModal();
                    window.location.reload();
                }
            } catch (error) {
                console.error('Error deleting media:', error);
                alert('Error deleting media');
            }
        }

        // Close modal
        function closeModal() {
            document.getElementById('mediaModal').style.display = 'none';
        }

        // Close modal when clicking outside
        window.onclick = function(event) {
            const modal = document.getElementById('mediaModal');
            if (event.target === modal) {
                closeModal();
            }
        }

        // Load stats on page load
        loadStats();

        // Enter key for search
        document.getElementById('searchInput').addEventListener('keypress', (e) => {
            if (e.key === 'Enter') applyFilters();
        });

        // User Dropdown Toggle
        function toggleUserDropdown() {
            const dropdown = document.getElementById('userDropdown');
            dropdown.classList.toggle('show');
        }

        // Close dropdown when clicking outside
        window.addEventListener('click', function(e) {
            if (!e.target.matches('.user-avatar')) {
                const dropdown = document.getElementById('userDropdown');
                if (dropdown && dropdown.classList.contains('show')) {
                    dropdown.classList.remove('show');
                }
            }
        });
    </script>
</body>
