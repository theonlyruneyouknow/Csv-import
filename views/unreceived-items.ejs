        async function updateItemNotes(itemId, notes) {
            const input = document.querySelector(`.item-notes-input[data-item-id="${itemId}"]`);
            if (!input) {
                console.error('‚ùå Could not find input element for item', itemId);
                return;
            }

            // Find the item in filteredItems and check if notes actually changed
            const item = filteredItems.find(i => i.itemId === itemId);
            if (item && item.receivingNotes === notes) {
                return; // No change, don't save
            }

            try {
                input.classList.add('saving');
                console.log('üíæ Saving notes for item', itemId, ':', notes);

                const response = await fetch(`/purchase-orders/line-item/${itemId}/notes`, {
                    method: 'PATCH',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    credentials: 'same-origin',
                    body: JSON.stringify({ receivingNotes: notes })
                });

                if (!response.ok) {
                    const errorText = await response.text();
                    console.error('‚ùå Server response not OK:', response.status, errorText);
                    throw new Error(`Server error: ${response.status} - ${errorText}`);
                }

                const result = await response.json();
                console.log('üì• Server response:', result);

                if (result.success) {
                    // Update the item in our local data
                    if (item) {
                        item.receivingNotes = notes;
                    }

                    // Show success feedback
                    input.classList.remove('saving');
                    input.classList.add('saved');
                    setTimeout(() => {
                        input.classList.remove('saved');
                    }, 1500);

                    console.log('‚úÖ Notes updated for item', itemId);
                } else {
                    throw new Error(result.error || 'Failed to update notes');
                }
            } catch (error) {
                console.error('‚ùå Error updating notes:', error);
                input.classList.remove('saving');

                // Show more specific error message
                let errorMessage = 'Failed to update notes';
                if (error.message.includes('Failed to fetch')) {
                    errorMessage = 'Network error - please check your connection';
                } else if (error.message) {
                    errorMessage = error.message;
                }

                showToast('‚ùå ' + errorMessage);
            }
        }

