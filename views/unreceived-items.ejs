    <script>
        let allItems = [];
        let filteredItems = [];
        let currentSort = { column: 'poNumber', direction: 'asc' };
        let isCompactMode = false;

        // Load data on page load
        document.addEventListener('DOMContentLoaded', () => {
            loadData();
            setupEventListeners();
            setupDragAndDrop();
            // Check for saved compact mode preference
            const savedCompactMode = localStorage.getItem('unreceivedItemsCompactMode');
            if (savedCompactMode === 'true') {
                toggleCompactMode();
            }
            // Load favorites
            loadFavoritesList();
            // Load saved column preferences
            loadViewColumnPreferences();
        });

        function toggleCompactMode() {
            isCompactMode = !isCompactMode;
            const header = document.querySelector('.header');
            const statsAndFiltersBar = document.querySelector('.stats-and-filters-bar');
            const toggleBtn = document.querySelector('.compact-mode-toggle');

            if (isCompactMode) {
                header.classList.add('compact');
                statsAndFiltersBar.classList.add('compact');
                toggleBtn.textContent = '‚¨ç';
                toggleBtn.title = 'Expand View';
            } else {
                header.classList.remove('compact');
                statsAndFiltersBar.classList.remove('compact');
                toggleBtn.textContent = '‚¨ç';
                toggleBtn.title = 'Compact View';
            }

            // Save preference
            localStorage.setItem('unreceivedItemsCompactMode', isCompactMode);
        }

        function setupEventListeners() {
            // Search filter
            document.getElementById('searchFilter').addEventListener('input', applyFilters);

            // Dropdown filters
            document.getElementById('vendorFilter').addEventListener('change', applyFilters);
            document.getElementById('statusFilter').addEventListener('change', applyFilters);

            // Sort headers
            document.querySelectorAll('th.sortable').forEach(th => {
                th.addEventListener('click', () => {
                    const sortBy = th.dataset.sort;
                    handleSort(sortBy);
                });
            });
        }

        async function loadData() {
            try {
                console.log('üîÑ Starting to load unreceived items data...');
                const response = await fetch('/purchase-orders/unreceived-items');
                console.log('üì° Received response:', response.status);

                const data = await response.json();
                console.log('üìä Data received:', { success: data.success, itemCount: data.items?.length });

                if (data.success) {
                    allItems = data.items;
                    filteredItems = [...allItems];
                    console.log('‚úÖ Data loaded successfully, rendering table...');
                    console.log('üìã Sample item:', filteredItems[0]); // Debug: Check item structure

                    // Debug: Check inventory fields specifically
                    if (filteredItems.length > 0) {
                        const itemsWithInventory = filteredItems.filter(item =>
                            item.inventoryRawQuantity !== null ||
                            item.inventoryChildQuantity !== null ||
                            (item.inventoryMeasure && item.inventoryMeasure !== '')
                        );

                        console.log(`üì¶ Items with inventory data: ${itemsWithInventory.length} out of ${filteredItems.length}`);

                        if (itemsWithInventory.length > 0) {
                            const sample = itemsWithInventory[0];
                            console.log('üì¶ Sample item WITH inventory data:', {
                                sku: sample.sku,
                                inventoryRawQuantity: sample.inventoryRawQuantity,
                                inventoryChildQuantity: sample.inventoryChildQuantity,
                                inventoryMeasure: sample.inventoryMeasure,
                                inventoryLastUpdated: sample.inventoryLastUpdated
                            });
                        } else {
                            console.log('‚ö†Ô∏è No items found with inventory data yet');
                        }
                    }

                    updateStats(data.stats);
                    populateFilters();
                    renderTable();
                    console.log('‚úÖ Table rendered successfully');
                } else {
                    console.error('‚ùå Server returned error:', data.error);
                    showError('Failed to load data: ' + data.error);
                }
            } catch (error) {
                console.error('‚ùå Error loading data:', error);
                showError('Error loading unreceived items: ' + error.message);
            }
        }

        function updateStats(stats) {
            document.getElementById('totalItems').textContent = stats.totalItems.toLocaleString();
            document.getElementById('totalPOs').textContent = stats.totalPOs.toLocaleString();

            // Calculate unique vendors
            const uniqueVendors = new Set(allItems.map(item => item.vendor));
            document.getElementById('totalVendors').textContent = uniqueVendors.size.toLocaleString();
        }

        function populateFilters() {
            // Populate vendor filter
            const vendors = [...new Set(allItems.map(item => item.vendor))].sort();
            const vendorSelect = document.getElementById('vendorFilter');
            vendors.forEach(vendor => {
                const option = document.createElement('option');
                option.value = vendor;
                option.textContent = vendor;
                vendorSelect.appendChild(option);
            });

            // Populate status filter
            const statuses = [...new Set(allItems.map(item => item.poStatus).filter(s => s))].sort();
            const statusSelect = document.getElementById('statusFilter');
            statuses.forEach(status => {
                const option = document.createElement('option');
                option.value = status;
                option.textContent = status;
                statusSelect.appendChild(option);
            });
        }

        function applyFilters() {
            const searchTerm = document.getElementById('searchFilter').value.toLowerCase();
            const vendorFilter = document.getElementById('vendorFilter').value;
            const statusFilter = document.getElementById('statusFilter').value;

            filteredItems = allItems.filter(item => {
                // Search filter
                const matchesSearch = !searchTerm ||
                    item.poNumber.toLowerCase().includes(searchTerm) ||
                    item.vendor.toLowerCase().includes(searchTerm) ||
                    (item.sku && item.sku.toLowerCase().includes(searchTerm)) ||
                    (item.memo && item.memo.toLowerCase().includes(searchTerm));

                // Vendor filter
                const matchesVendor = !vendorFilter || item.vendor === vendorFilter;

                // Status filter
                const matchesStatus = !statusFilter || item.poStatus === statusFilter;

                return matchesSearch && matchesVendor && matchesStatus;
            });

            renderTable();
        }

        function handleSort(column) {
            if (currentSort.column === column) {
                currentSort.direction = currentSort.direction === 'asc' ? 'desc' : 'asc';
            } else {
                currentSort.column = column;
                currentSort.direction = 'asc';
            }

            // Update header classes
            document.querySelectorAll('th.sortable').forEach(th => {
                th.classList.remove('sort-asc', 'sort-desc');
                if (th.dataset.sort === column) {
                    th.classList.add(currentSort.direction === 'asc' ? 'sort-asc' : 'sort-desc');
                }
            });

            sortItems();
            renderTable();
        }

        function sortItems() {
            filteredItems.sort((a, b) => {
                let aVal = a[currentSort.column];
                let bVal = b[currentSort.column];

                // Handle null/undefined
                if (!aVal) aVal = '';
                if (!bVal) bVal = '';

                // Handle dates
                if (currentSort.column === 'eta' || currentSort.column === 'poDate') {
                    aVal = aVal ? new Date(aVal) : new Date(0);
                    bVal = bVal ? new Date(bVal) : new Date(0);
                }

                // Compare
                if (aVal < bVal) return currentSort.direction === 'asc' ? -1 : 1;
                if (aVal > bVal) return currentSort.direction === 'asc' ? 1 : -1;
                return 0;
            });
        }

        // View column configuration
        let viewColumns = [
            { id: 'poNumber', label: 'PO Number', visible: true, sortable: true },
            { id: 'vendor', label: 'Vendor', visible: true, sortable: true },
            { id: 'poDate', label: 'PO Date', visible: true, sortable: true },
            { id: 'eta', label: 'ETA', visible: true, sortable: true },
            { id: 'sku', label: 'SKU', visible: true, sortable: true },
            { id: 'memo', label: 'Description', visible: true, sortable: false },
            { id: 'quantity', label: 'Quantity', visible: true, sortable: true },
            { id: 'itemStatus', label: 'Item Status', visible: true, sortable: true },
            { id: 'poStatus', label: 'PO Status', visible: true, sortable: true },
            { id: 'notes', label: 'Notes', visible: true, sortable: false },
            { id: 'inventoryRawQuantity', label: 'Inv Raw', visible: true, sortable: true },
            { id: 'inventoryChildQuantity', label: 'Inv Child', visible: true, sortable: true },
            { id: 'inventoryMeasure', label: 'Inv Measure', visible: true, sortable: true }
        ];

        function loadViewColumnPreferences() {
            const saved = localStorage.getItem('unreceivedItemsViewColumns');
            if (saved) {
                try {
                    const savedColumns = JSON.parse(saved);

                    // Merge saved preferences with default columns to add any new columns
                    const defaultColumns = [
                        { id: 'poNumber', label: 'PO Number', visible: true, sortable: true },
                        { id: 'vendor', label: 'Vendor', visible: true, sortable: true },
                        { id: 'poDate', label: 'PO Date', visible: true, sortable: true },
                        { id: 'eta', label: 'ETA', visible: true, sortable: true },
                        { id: 'sku', label: 'SKU', visible: true, sortable: true },
                        { id: 'memo', label: 'Description', visible: true, sortable: false },
                        { id: 'quantity', label: 'Quantity', visible: true, sortable: true },
                        { id: 'itemStatus', label: 'Item Status', visible: true, sortable: true },
                        { id: 'poStatus', label: 'PO Status', visible: true, sortable: true },
                        { id: 'notes', label: 'Notes', visible: true, sortable: false },
                        { id: 'inventoryRawQuantity', label: 'Inv Raw', visible: true, sortable: true },
                        { id: 'inventoryChildQuantity', label: 'Inv Child', visible: true, sortable: true },
                        { id: 'inventoryMeasure', label: 'Inv Measure', visible: true, sortable: true }
                    ];

                    // Find columns in default that aren't in saved
                    const savedIds = savedColumns.map(col => col.id);
                    const newColumns = defaultColumns.filter(col => !savedIds.includes(col.id));

                    // Append new columns to saved columns
                    viewColumns = [...savedColumns, ...newColumns];

                    // Save the updated preferences
                    if (newColumns.length > 0) {
                        console.log('Added new columns:', newColumns.map(c => c.label).join(', '));
                        saveViewColumnPreferences();
                    }
                } catch (e) {
                    console.error('Failed to load column preferences:', e);
                }
            }
            updateTableHeaders();
        }

        function saveViewColumnPreferences() {
            localStorage.setItem('unreceivedItemsViewColumns', JSON.stringify(viewColumns));
        }

        function updateTableHeaders() {
            const thead = document.querySelector('#itemsTable thead tr');
            if (!thead) return;

            const visibleColumns = viewColumns.filter(col => col.visible);
            thead.innerHTML = visibleColumns.map(col => {
                const sortClass = col.sortable ? 'sortable' : '';
                return `<th class="${sortClass}" data-sort="${col.id}">${col.label}</th>`;
            }).join('');
        }

        function openViewColumnModal() {
