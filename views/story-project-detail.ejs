<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= project.title %> - Story Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Georgia', serif;
        }

        .hero-section {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 2rem 0;
            margin-bottom: 2rem;
        }

        .project-info {
            background: white;
            border-radius: 12px;
            padding: 2rem;
            margin-bottom: 2rem;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        .section-card {
            background: white;
            border-radius: 12px;
            padding: 1.5rem;
            margin-bottom: 2rem;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        .section-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
            padding-bottom: 1rem;
            border-bottom: 2px solid #f1f3f5;
        }

        .section-title {
            font-size: 1.5rem;
            font-weight: bold;
            color: #2c3e50;
        }

        .story-item {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 1rem;
            margin-bottom: 1rem;
            border-left: 4px solid #667eea;
            transition: all 0.3s;
            cursor: pointer;
        }

        .story-item:hover {
            transform: translateX(4px);
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        .story-title {
            font-size: 1.1rem;
            font-weight: bold;
            color: #2c3e50;
            margin-bottom: 0.5rem;
        }

        .story-meta {
            display: flex;
            gap: 1rem;
            font-size: 0.9rem;
            color: #6c757d;
        }

        .character-card, .timeline-card {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 1rem;
            margin-bottom: 1rem;
            transition: all 0.3s;
        }

        .character-card:hover, .timeline-card:hover {
            background: #e9ecef;
        }

        .badge-role {
            padding: 0.3rem 0.6rem;
            border-radius: 15px;
            font-size: 0.8rem;
        }

        .progress {
            height: 10px;
            border-radius: 10px;
        }

        .empty-state {
            text-align: center;
            padding: 2rem;
            color: #6c757d;
        }

        .tabs-custom {
            border-bottom: 2px solid #e9ecef;
            margin-bottom: 2rem;
        }

        .tab-item {
            padding: 1rem 1.5rem;
            color: #6c757d;
            text-decoration: none;
            display: inline-block;
            border-bottom: 3px solid transparent;
            transition: all 0.3s;
        }

        .tab-item:hover {
            color: #667eea;
        }

        .tab-item.active {
            color: #667eea;
            border-bottom-color: #667eea;
            font-weight: bold;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
            margin-bottom: 2rem;
        }

        .stat-box {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 1rem;
            text-align: center;
        }

        .stat-number {
            font-size: 2rem;
            font-weight: bold;
            color: #667eea;
        }

        .stat-label {
            color: #6c757d;
            font-size: 0.9rem;
        }
    </style>
</head>

<body>
    <%- include('partials/header') %>

    <!-- Hero Section -->
    <div class="hero-section">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="mb-2">
                        <a href="/story/projects" class="text-white text-decoration-none">
                            <i class="fas fa-arrow-left me-2"></i>Back to Projects
                        </a>
                    </div>
                    <h1><%= project.title %></h1>
                    <p class="mb-0">
                        <span class="badge bg-light text-dark me-2">
                            <%= project.type.replace('-', ' ').replace(/\b\w/g, l => l.toUpperCase()) %>
                        </span>
                        <% if (project.genre) { %>
                            <span class="badge bg-light text-dark"><%= project.genre %></span>
                        <% } %>
                    </p>
                </div>
                <div>
                    <button class="btn btn-light me-2" onclick="editProject()">
                        <i class="fas fa-edit me-2"></i>Edit Project
                    </button>
                    <a href="/story/write?project=<%= project._id %>" class="btn btn-success">
                        <i class="fas fa-plus me-2"></i>New Story
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <!-- Project Info -->
        <div class="project-info">
            <% if (project.description) { %>
                <p class="lead"><%= project.description %></p>
            <% } %>

            <div class="stats-grid">
                <div class="stat-box">
                    <div class="stat-number"><%= project.currentWordCount.toLocaleString() %></div>
                    <div class="stat-label">Words Written</div>
                </div>
                <% if (project.targetWordCount) { %>
                    <div class="stat-box">
                        <div class="stat-number"><%= project.targetWordCount.toLocaleString() %></div>
                        <div class="stat-label">Target Words</div>
                    </div>
                    <div class="stat-box">
                        <% const percentage = Math.min(Math.round((project.currentWordCount / project.targetWordCount) * 100), 100); %>
                        <div class="stat-number"><%= percentage %>%</div>
                        <div class="stat-label">Complete</div>
                    </div>
                <% } %>
                <div class="stat-box">
                    <div class="stat-number"><%= stories.length %></div>
                    <div class="stat-label">Stories</div>
                </div>
            </div>

            <% if (project.targetWordCount) { %>
                <% const percentage = Math.min(Math.round((project.currentWordCount / project.targetWordCount) * 100), 100); %>
                <div class="progress mb-3">
                    <div class="progress-bar bg-success" role="progressbar" style="width: <%= percentage %>%"
                        aria-valuenow="<%= percentage %>" aria-valuemin="0" aria-valuemax="100">
                        <%= percentage %>%
                    </div>
                </div>
            <% } %>

            <div class="row">
                <div class="col-md-4">
                    <strong>Status:</strong>
                    <span class="badge bg-<%= 
                        project.status === 'completed' || project.status === 'published' ? 'success' :
                        project.status === 'writing' || project.status === 'editing' ? 'primary' :
                        project.status === 'reviewing' ? 'info' : 'warning'
                    %> ms-2">
                        <%= project.status.charAt(0).toUpperCase() + project.status.slice(1) %>
                    </span>
                </div>
                <% if (project.deadline) { %>
                    <div class="col-md-4">
                        <strong>Deadline:</strong> <%= new Date(project.deadline).toLocaleDateString() %>
                    </div>
                <% } %>
                <div class="col-md-4">
                    <strong>Last Updated:</strong> <%= new Date(project.updatedAt).toLocaleDateString() %>
                </div>
            </div>

            <% if (project.notes) { %>
                <div class="mt-3">
                    <strong>Notes:</strong>
                    <p class="mt-2"><%= project.notes %></p>
                </div>
            <% } %>
        </div>

        <!-- Tabs -->
        <div class="tabs-custom">
            <a href="#stories" class="tab-item active" data-tab="stories">
                <i class="fas fa-book me-2"></i>Stories (<%= stories.length %>)
            </a>
            <a href="#characters" class="tab-item" data-tab="characters">
                <i class="fas fa-users me-2"></i>Characters (<%= characters.length %>)
            </a>
            <a href="#timelines" class="tab-item" data-tab="timelines">
                <i class="fas fa-timeline me-2"></i>Timelines (<%= timelines.length %>)
            </a>
        </div>

        <!-- Stories Section -->
        <div class="tab-content" id="stories-content">
            <div class="section-card">
                <div class="section-header">
                    <h2 class="section-title"><i class="fas fa-book me-2"></i>Stories</h2>
                    <a href="/story/write?project=<%= project._id %>" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Add Story
                    </a>
                </div>

                <% if (stories && stories.length > 0) { %>
                    <% stories.forEach(story => { %>
                        <div class="story-item" onclick="window.location.href='/story/write/<%= story._id %>'">
                            <div class="story-title">
                                <%= story.title %>
                                <span class="badge bg-<%= 
                                    story.status === 'completed' ? 'success' :
                                    story.status === 'writing' || story.status === 'editing' ? 'primary' :
                                    story.status === 'review' ? 'info' : 'secondary'
                                %> ms-2">
                                    <%= story.status %>
                                </span>
                            </div>
                            <div class="story-meta">
                                <span><i class="fas fa-align-left me-1"></i><%= story.type %></span>
                                <span><i class="fas fa-sort-numeric-up me-1"></i>Order: <%= story.order %></span>
                                <span><i class="fas fa-pen me-1"></i><%= story.wordCount.toLocaleString() %> words</span>
                                <span><i class="far fa-calendar me-1"></i><%= new Date(story.updatedAt).toLocaleDateString() %></span>
                            </div>
                            <% if (story.summary) { %>
                                <p class="text-muted mt-2 mb-0"><%= story.summary.substring(0, 150) %><%= story.summary.length > 150 ? '...' : '' %></p>
                            <% } %>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="empty-state">
                        <i class="fas fa-book-open" style="font-size: 3rem; opacity: 0.3;"></i>
                        <h4 class="mt-3">No Stories Yet</h4>
                        <p>Start writing your first story for this project.</p>
                        <a href="/story/write?project=<%= project._id %>" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Create Story
                        </a>
                    </div>
                <% } %>
            </div>
        </div>

        <!-- Characters Section -->
        <div class="tab-content" id="characters-content" style="display: none;">
            <div class="section-card">
                <div class="section-header">
                    <h2 class="section-title"><i class="fas fa-users me-2"></i>Characters</h2>
                    <button class="btn btn-primary" onclick="createCharacter()">
                        <i class="fas fa-plus me-2"></i>Add Character
                    </button>
                </div>

                <% if (characters && characters.length > 0) { %>
                    <div class="row">
                        <% characters.forEach(character => { %>
                            <div class="col-md-6 mb-3">
                                <div class="character-card">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <h5 class="mb-0"><%= character.name %></h5>
                                        <span class="badge-role badge bg-<%= 
                                            character.role === 'protagonist' ? 'primary' :
                                            character.role === 'antagonist' ? 'danger' :
                                            character.role === 'supporting' ? 'info' : 'secondary'
                                        %>">
                                            <%= character.role %>
                                        </span>
                                    </div>
                                    <% if (character.description) { %>
                                        <p class="text-muted small mb-2">
                                            <%= character.description.substring(0, 120) %><%= character.description.length > 120 ? '...' : '' %>
                                        </p>
                                    <% } %>
                                    <div class="d-flex gap-2 mt-3">
                                        <button class="btn btn-sm btn-outline-primary" onclick="viewCharacter('<%= character._id %>')">
                                            <i class="fas fa-eye"></i> View
                                        </button>
                                        <button class="btn btn-sm btn-outline-secondary" onclick="editCharacter('<%= character._id %>')">
                                            <i class="fas fa-edit"></i> Edit
                                        </button>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <div class="empty-state">
                        <i class="fas fa-users" style="font-size: 3rem; opacity: 0.3;"></i>
                        <h4 class="mt-3">No Characters Yet</h4>
                        <p>Add characters to bring your story to life.</p>
                        <button class="btn btn-primary" onclick="createCharacter()">
                            <i class="fas fa-plus me-2"></i>Create Character
                        </button>
                    </div>
                <% } %>
            </div>
        </div>

        <!-- Timelines Section -->
        <div class="tab-content" id="timelines-content" style="display: none;">
            <div class="section-card">
                <div class="section-header">
                    <h2 class="section-title"><i class="fas fa-timeline me-2"></i>Timelines</h2>
                    <button class="btn btn-primary" onclick="createTimeline()">
                        <i class="fas fa-plus me-2"></i>Add Timeline
                    </button>
                </div>

                <% if (timelines && timelines.length > 0) { %>
                    <% timelines.forEach(timeline => { %>
                        <div class="timeline-card">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <div>
                                    <h5 class="mb-1"><%= timeline.title %></h5>
                                    <span class="badge bg-secondary"><%= timeline.type %></span>
                                </div>
                                <span class="text-muted small">
                                    <%= timeline.events ? timeline.events.length : 0 %> events
                                </span>
                            </div>
                            <% if (timeline.description) { %>
                                <p class="text-muted small mb-2"><%= timeline.description %></p>
                            <% } %>
                            <div class="d-flex gap-2 mt-3">
                                <button class="btn btn-sm btn-outline-primary" onclick="viewTimeline('<%= timeline._id %>')">
                                    <i class="fas fa-eye"></i> View
                                </button>
                                <button class="btn btn-sm btn-outline-secondary" onclick="editTimeline('<%= timeline._id %>')">
                                    <i class="fas fa-edit"></i> Edit
                                </button>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="empty-state">
                        <i class="fas fa-timeline" style="font-size: 3rem; opacity: 0.3;"></i>
                        <h4 class="mt-3">No Timelines Yet</h4>
                        <p>Create timelines to organize your story events.</p>
                        <button class="btn btn-primary" onclick="createTimeline()">
                            <i class="fas fa-plus me-2"></i>Create Timeline
                        </button>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Tab switching
        document.querySelectorAll('.tab-item').forEach(tab => {
            tab.addEventListener('click', (e) => {
                e.preventDefault();
                const tabName = tab.dataset.tab;

                // Update active tab
                document.querySelectorAll('.tab-item').forEach(t => t.classList.remove('active'));
                tab.classList.add('active');

                // Show corresponding content
                document.querySelectorAll('.tab-content').forEach(content => {
                    content.style.display = 'none';
                });
                document.getElementById(`${tabName}-content`).style.display = 'block';
            });
        });

        function editProject() {
            // Redirect to project edit page or open modal
            window.location.href = '/story/projects?edit=<%= project._id %>';
        }

        function createCharacter() {
            // Open character creation modal or page
            alert('Character creation will be implemented');
        }

        function viewCharacter(id) {
            alert('View character: ' + id);
        }

        function editCharacter(id) {
            alert('Edit character: ' + id);
        }

        function createTimeline() {
            alert('Timeline creation will be implemented');
        }

        function viewTimeline(id) {
            alert('View timeline: ' + id);
        }

        function editTimeline(id) {
            alert('Edit timeline: ' + id);
        }
    </script>
</body>

</html>
