<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mission Areas - EBM Alumni</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 2rem 0;
        }
        .container-custom {
            max-width: 1200px;
            margin: 0 auto;
        }
        .areas-card {
            background: white;
            border-radius: 15px;
            padding: 2rem;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
        }
        .page-header {
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            border-bottom: 3px solid #667eea;
        }
        .area-badge {
            display: inline-block;
            padding: 0.75rem 1.5rem;
            margin: 0.5rem;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 25px;
            font-size: 1.1rem;
            font-weight: 500;
            box-shadow: 0 2px 10px rgba(102, 126, 234, 0.3);
            transition: all 0.2s;
            cursor: pointer;
            border: 3px solid transparent;
            user-select: none;
        }
        .area-badge:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.5);
        }
        .area-badge.selected {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            border-color: #fff;
            transform: scale(1.05);
        }
        .merge-toolbar {
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            background: white;
            padding: 1rem;
            box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.2);
            display: none;
            z-index: 1000;
        }
        .merge-toolbar.show {
            display: block;
        }
    </style>
</head>
<body>
    <div class="container-custom">
        <div class="areas-card">
            <div class="page-header">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h1 class="mb-2" style="color: #667eea;">
                            <i class="bi bi-geo-alt-fill me-2"></i>Mission Areas
                        </h1>
                        <p class="text-muted mb-0">Click areas to select them for merging</p>
                    </div>
                    <div>
                        <button class="btn btn-secondary me-2" onclick="clearSelection()" id="clearBtn" style="display:none;">
                            <i class="bi bi-x-circle me-2"></i>Clear Selection
                        </button>
                        <a href="/ebm/dashboard" class="btn btn-outline-primary">
                            <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
                        </a>
                    </div>
                </div>
            </div>

            <% if (areas && areas.length > 0) { %>
                <div class="mb-3">
                    <h5 class="text-muted">Total Areas: <%= areas.length %></h5>
                </div>
                <div class="d-flex flex-wrap" id="areasContainer">
                    <% areas.forEach(area => { %>
                        <span class="area-badge" 
                              data-area-id="<%= area._id %>"
                              data-area-name="<%= area.name %>"
                              data-area-city="<%= area.city || '' %>"
                              data-legacy-id="<%= area.legacyAreaId || '' %>"
                              onclick="toggleAreaSelection(this)">
                            <%= area.name %>
                            <% if (area.legacyAreaId) { %>
                                <small style="opacity: 0.8;">(ID: <%= area.legacyAreaId %>)</small>
                            <% } %>
                        </span>
                    <% }); %>
                </div>
            <% } else { %>
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>
                    No areas have been imported yet. Use the <a href="/ebm/import">Import page</a> to add areas.
                </div>
            <% } %>
        </div>
    </div>

    <!-- Merge Toolbar -->
    <div class="merge-toolbar" id="mergeToolbar">
        <div class="container-custom">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="mb-0">
                        <i class="bi bi-shuffle me-2"></i>
                        <span id="selectedCount">0</span> areas selected for merging
                    </h5>
                </div>
                <div>
                    <button class="btn btn-danger btn-lg" onclick="showMergeModal()">
                        <i class="bi bi-arrow-down-up me-2"></i>Merge Selected Areas
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Merge Modal -->
    <div class="modal fade" id="mergeModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title"><i class="bi bi-exclamation-triangle me-2"></i>Merge Areas</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-info-circle me-2"></i>
                        <strong>Warning:</strong> This will merge all selected areas into one. All missionaries and companionships will be updated to reference the kept area.
                    </div>
                    
                    <h6 class="mb-3">Selected Areas:</h6>
                    <div class="table-responsive mb-4">
                        <table class="table table-bordered" id="selectedAreasTable">
                            <thead>
                                <tr>
                                    <th>Keep This?</th>
                                    <th>Name</th>
                                    <th>City</th>
                                    <th>Legacy ID</th>
                                    <th>Database ID</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>

                    <div class="alert alert-info">
                        <strong>Select which area name to keep.</strong> All other areas will be merged into it and deleted.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" onclick="confirmMerge()">
                        <i class="bi bi-check-circle me-2"></i>Confirm Merge
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let selectedAreas = [];
        let mergeModal;

        document.addEventListener('DOMContentLoaded', function() {
            mergeModal = new bootstrap.Modal(document.getElementById('mergeModal'));
        });

        function toggleAreaSelection(element) {
            const areaId = element.dataset.areaId;
            const areaData = {
                id: areaId,
                name: element.dataset.areaName,
                city: element.dataset.areaCity,
                legacyId: element.dataset.legacyId
            };

            if (element.classList.contains('selected')) {
                element.classList.remove('selected');
                selectedAreas = selectedAreas.filter(a => a.id !== areaId);
            } else {
                element.classList.add('selected');
                selectedAreas.push(areaData);
            }

            updateToolbar();
        }

        function updateToolbar() {
            const toolbar = document.getElementById('mergeToolbar');
            const clearBtn = document.getElementById('clearBtn');
            const count = document.getElementById('selectedCount');
            
            count.textContent = selectedAreas.length;
            
            if (selectedAreas.length >= 2) {
                toolbar.classList.add('show');
                clearBtn.style.display = 'inline-block';
            } else {
                toolbar.classList.remove('show');
                if (selectedAreas.length === 0) {
                    clearBtn.style.display = 'none';
                }
            }
        }

        function clearSelection() {
            selectedAreas = [];
            document.querySelectorAll('.area-badge.selected').forEach(el => {
                el.classList.remove('selected');
            });
            updateToolbar();
        }

        function showMergeModal() {
            if (selectedAreas.length < 2) {
                alert('Please select at least 2 areas to merge');
                return;
            }

            const tbody = document.querySelector('#selectedAreasTable tbody');
            tbody.innerHTML = '';

            selectedAreas.forEach((area, index) => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td class="text-center">
                        <input type="radio" name="keepArea" value="${area.id}" ${index === 0 ? 'checked' : ''} class="form-check-input">
                    </td>
                    <td><strong>${area.name}</strong></td>
                    <td>${area.city || '-'}</td>
                    <td>${area.legacyId || '-'}</td>
                    <td><small class="text-muted">${area.id}</small></td>
                `;
                tbody.appendChild(row);
            });

            mergeModal.show();
        }

        async function confirmMerge() {
            const keepRadio = document.querySelector('input[name="keepArea"]:checked');
            if (!keepRadio) {
                alert('Please select which area to keep');
                return;
            }

            const targetId = keepRadio.value;
            const sourceIds = selectedAreas.filter(a => a.id !== targetId).map(a => a.id);

            if (!confirm(`This will merge ${sourceIds.length} areas into the selected one. This cannot be undone. Continue?`)) {
                return;
            }

            try {
                // Merge each source into the target
                for (const sourceId of sourceIds) {
                    const response = await fetch('/ebm/areas/merge', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ sourceId, targetId })
                    });

                    const result = await response.json();
                    if (!result.success) {
                        throw new Error(result.error || 'Merge failed');
                    }
                }

                alert('Areas merged successfully!');
                window.location.reload();
            } catch (error) {
                console.error('Error merging areas:', error);
                alert('Error merging areas: ' + error.message);
            }
        }
    </script>
</body>
</html>
