<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Medicine Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', system-ui, sans-serif;
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem 1rem;
        }
        
        .page-header {
            background: linear-gradient(135deg, #6f42c1 0%, #9b59b6 100%);
            color: white;
            padding: 2rem;
            border-radius: 12px;
            margin-bottom: 2rem;
        }
        
        .pharmacy-card {
            background: white;
            border-radius: 12px;
            padding: 1.5rem;
            margin-bottom: 1rem;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            border: 1px solid #e9ecef;
            transition: all 0.3s ease;
        }
        
        .pharmacy-card:hover {
            box-shadow: 0 4px 15px rgba(0,0,0,0.15);
            transform: translateY(-1px);
        }
        
        .pharmacy-card.primary {
            border: 2px solid #6f42c1;
        }
        
        .primary-badge {
            background: linear-gradient(135deg, #6f42c1 0%, #9b59b6 100%);
            color: white;
            padding: 0.25rem 0.75rem;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 500;
        }
        
        .chain-badge {
            background: #e9ecef;
            color: #495057;
            padding: 0.25rem 0.75rem;
            border-radius: 20px;
            font-size: 0.85rem;
        }
        
        .service-tag {
            display: inline-block;
            background: #f0f0f0;
            padding: 0.25rem 0.5rem;
            border-radius: 6px;
            font-size: 0.8rem;
            margin: 0.2rem;
            color: #495057;
        }
        
        .service-tag i {
            margin-right: 0.25rem;
            color: #6f42c1;
        }
        
        .contact-info {
            color: #6c757d;
            font-size: 0.9rem;
        }
        
        .contact-info i {
            width: 20px;
            color: #6f42c1;
        }
        
        .no-pharmacies {
            text-align: center;
            padding: 4rem 2rem;
            background: white;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }
        
        .btn-primary {
            background: linear-gradient(135deg, #6f42c1 0%, #9b59b6 100%);
            border: none;
        }
        
        .btn-primary:hover {
            background: linear-gradient(135deg, #5e35b1 0%, #8e44ad 100%);
        }
        
        .hours-display {
            font-size: 0.85rem;
            color: #6c757d;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Page Header -->
        <div class="page-header">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h2 mb-2">
                        <i class="fas fa-store me-3"></i>My Pharmacies
                    </h1>
                    <p class="mb-0 opacity-75">Manage your preferred pharmacies</p>
                </div>
                <div>
                    <a href="/medicine/dashboard" class="btn btn-light me-2">
                        <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                    </a>
                    <button class="btn btn-success" onclick="addNewPharmacy()">
                        <i class="fas fa-plus me-2"></i>Add Pharmacy
                    </button>
                </div>
            </div>
        </div>

        <!-- Success Message -->
        <% if (typeof success !== 'undefined' && success) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i><%= success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <!-- Pharmacies List -->
        <% if (pharmacies && pharmacies.length > 0) { %>
            <div class="row">
                <% pharmacies.forEach((pharmacy) => { %>
                    <div class="col-lg-6 mb-3">
                        <div class="pharmacy-card <%= pharmacy.isPrimary ? 'primary' : '' %>">
                            <div class="d-flex align-items-start justify-content-between mb-3">
                                <div class="flex-grow-1">
                                    <h5 class="mb-2">
                                        <%= pharmacy.name %>
                                        <% if (pharmacy.isPrimary) { %>
                                            <span class="primary-badge ms-2">
                                                <i class="fas fa-star me-1"></i>Primary
                                            </span>
                                        <% } %>
                                    </h5>
                                    <% if (pharmacy.chainName) { %>
                                        <span class="chain-badge"><%= pharmacy.chainName %></span>
                                    <% } %>
                                </div>
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                        <i class="fas fa-ellipsis-v"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <% if (!pharmacy.isPrimary) { %>
                                            <li>
                                                <button class="dropdown-item" onclick="setPrimary('<%= pharmacy._id %>')">
                                                    <i class="fas fa-star me-2"></i>Set as Primary
                                                </button>
                                            </li>
                                        <% } %>
                                        <li>
                                            <a class="dropdown-item" href="/medicine/pharmacies/<%= pharmacy._id %>/edit">
                                                <i class="fas fa-edit me-2"></i>Edit
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <button class="dropdown-item text-danger" onclick="deletePharmacy('<%= pharmacy._id %>', '<%= pharmacy.name %>')">
                                                <i class="fas fa-trash me-2"></i>Remove
                                            </button>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            
                            <!-- Address -->
                            <% if (pharmacy.address && (pharmacy.address.street || pharmacy.address.city)) { %>
                                <div class="contact-info mb-2">
                                    <i class="fas fa-map-marker-alt"></i>
                                    <% if (pharmacy.address.street) { %><%= pharmacy.address.street %><br><% } %>
                                    <% if (pharmacy.address.city || pharmacy.address.state || pharmacy.address.zipCode) { %>
                                        <span class="ms-4">
                                            <%= pharmacy.address.city %><% if (pharmacy.address.city && pharmacy.address.state) { %>, <% } %><%= pharmacy.address.state %> <%= pharmacy.address.zipCode %>
                                        </span>
                                    <% } %>
                                </div>
                            <% } %>
                            
                            <!-- Contact -->
                            <% if (pharmacy.contact) { %>
                                <% if (pharmacy.contact.phoneNumber) { %>
                                    <div class="contact-info mb-1">
                                        <i class="fas fa-phone"></i>
                                        <a href="tel:<%= pharmacy.contact.phoneNumber %>"><%= pharmacy.contact.phoneNumber %></a>
                                    </div>
                                <% } %>
                                <% if (pharmacy.contact.email) { %>
                                    <div class="contact-info mb-1">
                                        <i class="fas fa-envelope"></i>
                                        <a href="mailto:<%= pharmacy.contact.email %>"><%= pharmacy.contact.email %></a>
                                    </div>
                                <% } %>
                                <% if (pharmacy.contact.website) { %>
                                    <div class="contact-info mb-1">
                                        <i class="fas fa-globe"></i>
                                        <a href="<%= pharmacy.contact.website %>" target="_blank">Visit Website</a>
                                    </div>
                                <% } %>
                            <% } %>
                            
                            <!-- Services -->
                            <% if (pharmacy.services && pharmacy.services.length > 0) { %>
                                <div class="mt-3 pt-3 border-top">
                                    <small class="text-muted d-block mb-2">Services:</small>
                                    <div>
                                        <% pharmacy.services.forEach(service => { %>
                                            <span class="service-tag">
                                                <% if (service === 'drive-thru') { %>
                                                    <i class="fas fa-car"></i>Drive-Thru
                                                <% } else if (service === 'delivery') { %>
                                                    <i class="fas fa-truck"></i>Delivery
                                                <% } else if (service === '24-hour') { %>
                                                    <i class="fas fa-clock"></i>24 Hours
                                                <% } else if (service === 'immunizations') { %>
                                                    <i class="fas fa-syringe"></i>Immunizations
                                                <% } else if (service === 'consultation') { %>
                                                    <i class="fas fa-user-md"></i>Consultation
                                                <% } else if (service === 'compounding') { %>
                                                    <i class="fas fa-prescription-bottle"></i>Compounding
                                                <% } else if (service === 'mail-order') { %>
                                                    <i class="fas fa-envelope"></i>Mail Order
                                                <% } else if (service === 'auto-refill') { %>
                                                    <i class="fas fa-sync"></i>Auto Refill
                                                <% } else { %>
                                                    <%= service %>
                                                <% } %>
                                            </span>
                                        <% }); %>
                                    </div>
                                </div>
                            <% } %>
                            
                            <!-- Notes -->
                            <% if (pharmacy.notes) { %>
                                <div class="mt-3 pt-3 border-top">
                                    <small class="text-muted">Notes:</small>
                                    <p class="mb-0 small"><%= pharmacy.notes %></p>
                                </div>
                            <% } %>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="no-pharmacies">
                <i class="fas fa-store text-muted" style="font-size: 4rem;"></i>
                <h4 class="text-muted mt-3">No pharmacies added yet</h4>
                <p class="text-muted">Add your preferred pharmacies to keep track of where you get your medications</p>
                <button class="btn btn-primary" onclick="addNewPharmacy()">
                    <i class="fas fa-plus me-2"></i>Add Your First Pharmacy
                </button>
            </div>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function addNewPharmacy() {
            // For now, just alert - you can implement a modal form later
            alert('Add pharmacy form coming soon! This will allow you to add pharmacy details.');
        }

        async function setPrimary(pharmacyId) {
            try {
                const response = await fetch(`/medicine/pharmacies/${pharmacyId}/set-primary`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                });

                const result = await response.json();

                if (response.ok) {
                    alert('Pharmacy set as primary successfully!');
                    location.reload();
                } else {
                    alert('Error: ' + (result.error || 'Unknown error'));
                }
            } catch (error) {
                console.error('Error setting primary pharmacy:', error);
                alert('Error setting primary pharmacy: ' + error.message);
            }
        }

        async function deletePharmacy(pharmacyId, pharmacyName) {
            if (!confirm(`Are you sure you want to remove ${pharmacyName}? This action cannot be undone.`)) {
                return;
            }

            try {
                const response = await fetch(`/medicine/pharmacies/${pharmacyId}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                });

                const result = await response.json();

                if (response.ok) {
                    alert('Pharmacy removed successfully!');
                    location.reload();
                } else {
                    alert('Error: ' + (result.error || 'Unknown error'));
                }
            } catch (error) {
                console.error('Error removing pharmacy:', error);
                alert('Error removing pharmacy: ' + error.message);
            }
        }
    </script>
</body>
</html>
