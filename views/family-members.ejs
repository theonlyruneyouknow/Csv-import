<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Medicine Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', system-ui, sans-serif;
        }
        
        .container {
            max-width: 1000px;
            margin: 0 auto;
            padding: 2rem 1rem;
        }
        
        .page-header {
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
            color: white;
            padding: 2rem;
            border-radius: 12px;
            margin-bottom: 2rem;
        }
        
        .family-member-card {
            background: white;
            border-radius: 12px;
            padding: 1.5rem;
            margin-bottom: 1rem;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            border: 1px solid #e9ecef;
            transition: all 0.3s ease;
        }
        
        .family-member-card:hover {
            box-shadow: 0 4px 15px rgba(0,0,0,0.15);
            transform: translateY(-1px);
        }
        
        .relationship-badge {
            padding: 0.25rem 0.75rem;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 500;
        }
        
        .relationship-self { background: #d4edda; color: #155724; }
        .relationship-spouse { background: #fce4ec; color: #880e4f; }
        .relationship-child { background: #e3f2fd; color: #0d47a1; }
        .relationship-parent { background: #f3e5f5; color: #4a148c; }
        .relationship-other { background: #f5f5f5; color: #424242; }
        
        .age-display {
            font-size: 0.9rem;
            color: #6c757d;
        }
        
        .no-members {
            text-align: center;
            padding: 4rem 2rem;
            background: white;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Page Header -->
        <div class="page-header">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h2 mb-2">
                        <i class="fas fa-users me-3"></i>Family Members
                    </h1>
                    <p class="mb-0 opacity-75">Manage family members for medicine tracking</p>
                </div>
                <div>
                    <a href="/medicine/dashboard" class="btn btn-light me-2">
                        <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                    </a>
                    <a href="/medicine/family/new" class="btn btn-success">
                        <i class="fas fa-plus me-2"></i>Add Family Member
                    </a>
                </div>
            </div>
        </div>

        <!-- Success Message -->
        <% if (typeof success !== 'undefined' && success) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i><%= success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        <% } %>

        <!-- Family Members List -->
        <% if (familyMembers && familyMembers.length > 0) { %>
            <div class="row">
                <% familyMembers.forEach((member) => { %>
                    <div class="col-lg-6 col-xl-4 mb-3">
                        <div class="family-member-card">
                            <div class="d-flex align-items-start justify-content-between mb-3">
                                <div class="flex-grow-1">
                                    <h5 class="mb-1"><%= member.fullName %></h5>
                                    <span class="relationship-badge relationship-<%= member.relationship %>">
                                        <%= member.relationship.charAt(0).toUpperCase() + member.relationship.slice(1) %>
                                    </span>
                                    <% if (member.age !== null) { %>
                                        <div class="age-display mt-1">Age: <%= member.age %> years old</div>
                                    <% } %>
                                </div>
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                        <i class="fas fa-ellipsis-v"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li>
                                            <a class="dropdown-item" href="/medicine/family/<%= member._id %>/edit">
                                                <i class="fas fa-edit me-2"></i>Edit
                                            </a>
                                        </li>
                                        <% if (member.relationship !== 'self') { %>
                                            <li><hr class="dropdown-divider"></li>
                                            <li>
                                                <button class="dropdown-item text-danger" onclick="deleteFamilyMember('<%= member._id %>', '<%= member.fullName %>')">
                                                    <i class="fas fa-trash me-2"></i>Remove
                                                </button>
                                            </li>
                                        <% } %>
                                    </ul>
                                </div>
                            </div>
                            
                            <!-- Contact Information -->
                            <% if (member.email || member.phone) { %>
                                <div class="mb-3">
                                    <% if (member.email) { %>
                                        <div class="small text-muted">
                                            <i class="fas fa-envelope me-1"></i><%= member.email %>
                                        </div>
                                    <% } %>
                                    <% if (member.phone) { %>
                                        <div class="small text-muted">
                                            <i class="fas fa-phone me-1"></i><%= member.formattedPhone %>
                                        </div>
                                    <% } %>
                                </div>
                            <% } %>
                            
                            <!-- Medical Information -->
                            <% if (member.allergies && member.allergies.length > 0) { %>
                                <div class="mb-2">
                                    <small class="text-warning">
                                        <i class="fas fa-exclamation-triangle me-1"></i>
                                        <%= member.allergies.length %> known <%= member.allergies.length === 1 ? 'allergy' : 'allergies' %>
                                    </small>
                                </div>
                            <% } %>
                            
                            <% if (member.medicalConditions && member.medicalConditions.length > 0) { %>
                                <div class="mb-2">
                                    <small class="text-info">
                                        <i class="fas fa-stethoscope me-1"></i>
                                        <%= member.medicalConditions.length %> medical <%= member.medicalConditions.length === 1 ? 'condition' : 'conditions' %>
                                    </small>
                                </div>
                            <% } %>
                            
                            <!-- Medicine Count -->
                            <div class="mt-3 pt-3 border-top">
                                <a href="/medicine/dashboard?member=<%= member._id %>" class="btn btn-outline-primary btn-sm w-100">
                                    <i class="fas fa-pills me-2"></i>View Medicines
                                </a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="no-members">
                <i class="fas fa-users text-muted" style="font-size: 4rem;"></i>
                <h4 class="text-muted mt-3">No family members added yet</h4>
                <p class="text-muted">Add family members to track their medications</p>
                <a href="/medicine/family/new" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Add Your First Family Member
                </a>
            </div>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        async function deleteFamilyMember(memberId, memberName) {
            if (!confirm(`Are you sure you want to remove ${memberName} from your family members? This action cannot be undone.`)) {
                return;
            }

            try {
                const response = await fetch(`/medicine/family/${memberId}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                });

                const result = await response.json();

                if (response.ok) {
                    alert('Family member removed successfully!');
                    location.reload();
                } else {
                    alert('Error: ' + (result.error || 'Unknown error'));
                }
            } catch (error) {
                console.error('Error removing family member:', error);
                alert('Error removing family member: ' + error.message);
            }
        }
    </script>
</body>
</html>
