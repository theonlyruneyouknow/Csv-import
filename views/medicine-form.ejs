<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Medicine Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', system-ui, sans-serif;
        }
        
        .container {
            max-width: 900px;
            margin: 0 auto;
            padding: 2rem 1rem;
        }
        
        .form-card {
            background: white;
            border-radius: 12px;
            padding: 2rem;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            border: 1px solid #e9ecef;
        }
        
        .form-header {
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
            color: white;
            padding: 1.5rem 2rem;
            border-radius: 12px 12px 0 0;
            margin: -2rem -2rem 2rem -2rem;
        }
        
        .form-group {
            margin-bottom: 1.5rem;
        }
        
        .form-label {
            font-weight: 500;
            margin-bottom: 0.5rem;
            color: #495057;
        }
        
        .form-control, .form-select {
            border-radius: 8px;
            border: 2px solid #e9ecef;
            padding: 0.75rem 1rem;
            transition: all 0.3s ease;
        }
        
        .form-control:focus, .form-select:focus {
            border-color: #28a745;
            box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.25);
        }
        
        .btn-primary {
            background: #28a745;
            border-color: #28a745;
            padding: 0.75rem 2rem;
            border-radius: 8px;
            font-weight: 500;
            transition: all 0.3s ease;
        }
        
        .btn-primary:hover {
            background: #218838;
            border-color: #1e7e34;
            transform: translateY(-1px);
        }
        
        .btn-secondary {
            padding: 0.75rem 2rem;
            border-radius: 8px;
            font-weight: 500;
        }
        
        .input-group-text {
            background: #f8f9fa;
            border-color: #e9ecef;
            color: #6c757d;
            font-weight: 500;
        }
        
        .advanced-section {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 1.5rem;
            margin-top: 1rem;
        }
        
        .section-title {
            color: #495057;
            font-weight: 600;
            margin-bottom: 1rem;
            border-bottom: 2px solid #dee2e6;
            padding-bottom: 0.5rem;
        }
        
        .row .col-md-6 .form-group:last-child {
            margin-bottom: 0;
        }
        
        .required {
            color: #dc3545;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Back Button -->
        <div class="mb-3">
            <a href="/medicine/dashboard" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
            </a>
        </div>

        <div class="form-card">
            <div class="form-header">
                <h1 class="h3 mb-0">
                    <i class="fas fa-pills me-3"></i><%= title %>
                </h1>
                <p class="mb-0 mt-2 opacity-75">Add a new medicine to track dosages, refills, and health monitoring</p>
            </div>

            <% if (typeof error !== 'undefined' && error) { %>
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-triangle me-2"></i><%= error %>
                </div>
            <% } %>

            <form action="/medicine/medicines" method="POST">
                <!-- Basic Information -->
                <div class="section-title">
                    <i class="fas fa-info-circle me-2"></i>Basic Information
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="familyMember" class="form-label">Family Member <span class="required">*</span></label>
                            <select class="form-select" id="familyMember" name="familyMember" required>
                                <option value="">Select family member...</option>
                                <% if (familyMembers) { %>
                                    <% familyMembers.forEach(member => { %>
                                        <option value="<%= member._id %>" <%= medicine && medicine.familyMember && medicine.familyMember.toString() === member._id.toString() ? 'selected' : '' %>>
                                            <%= member.getDisplayName() %>
                                        </option>
                                    <% }); %>
                                <% } %>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="name" class="form-label">Medicine Name <span class="required">*</span></label>
                            <input type="text" class="form-control" id="name" name="name" required placeholder="e.g., Lisinopril" value="<%= medicine ? medicine.name : '' %>">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="genericName" class="form-label">Generic Name</label>
                            <input type="text" class="form-control" id="genericName" name="genericName" placeholder="e.g., ACE Inhibitor" value="<%= medicine ? medicine.genericName : '' %>">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="condition" class="form-label">Condition/Purpose</label>
                            <input type="text" class="form-control" id="condition" name="condition" placeholder="e.g., High Blood Pressure" value="<%= medicine ? medicine.condition : '' %>">
                        </div>
                    </div>
                </div>

                <!-- Dosage Information -->
                <div class="section-title mt-4">
                    <i class="fas fa-prescription-bottle me-2"></i>Dosage Information
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="dosage.amount" class="form-label">Dose Amount <span class="required">*</span></label>
                            <input type="text" class="form-control" id="dosage.amount" name="dosage[amount]" required placeholder="e.g., 1 tablet">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="dosage.frequency" class="form-label">Frequency <span class="required">*</span></label>
                            <select class="form-select" id="dosage.frequency" name="dosage[frequency]" required>
                                <option value="">Select frequency...</option>
                                <option value="once-daily">Once Daily</option>
                                <option value="twice-daily">Twice Daily</option>
                                <option value="three-times-daily">Three Times Daily</option>
                                <option value="four-times-daily">Four Times Daily</option>
                                <option value="every-other-day">Every Other Day</option>
                                <option value="weekly">Weekly</option>
                                <option value="as-needed">As Needed</option>
                                <option value="custom">Custom</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="dosage.timing" class="form-label">Timing</label>
                            <input type="text" class="form-control" id="dosage.timing" name="dosage[timing]" placeholder="e.g., with food, morning">
                        </div>
                    </div>
                </div>

                <!-- Prescription Details -->
                <div class="section-title mt-4">
                    <i class="fas fa-file-prescription me-2"></i>Prescription Details
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="prescribedBy" class="form-label">Prescribed By</label>
                            <input type="text" class="form-control" id="prescribedBy" name="prescribedBy" placeholder="Dr. Smith">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="prescriptionDate" class="form-label">Prescription Date</label>
                            <input type="date" class="form-control" id="prescriptionDate" name="prescriptionDate">
                        </div>
                    </div>
                </div>

                <!-- Quantity & Refill Information -->
                <div class="section-title mt-4">
                    <i class="fas fa-boxes me-2"></i>Quantity & Refill Information
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="quantity.totalPills" class="form-label">Total Pills <span class="required">*</span></label>
                            <input type="number" class="form-control" id="quantity.totalPills" name="quantity[totalPills]" required min="1" placeholder="30">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="quantity.remainingPills" class="form-label">Remaining Pills</label>
                            <input type="number" class="form-control" id="quantity.remainingPills" name="quantity[remainingPills]" min="0" placeholder="30">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="refills.remaining" class="form-label">Refills Remaining</label>
                            <input type="number" class="form-control" id="refills.remaining" name="refills[remaining]" min="0" placeholder="3">
                        </div>
                    </div>
                </div>

                <!-- Advanced Options -->
                <div class="advanced-section mt-4">
                    <div class="section-title">
                        <i class="fas fa-cog me-2"></i>Advanced Options
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="status" class="form-label">Status</label>
                                <select class="form-select" id="status" name="status">
                                    <option value="active" selected>Active</option>
                                    <option value="paused">Paused</option>
                                    <option value="discontinued">Discontinued</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="costPerUnit" class="form-label">Cost Per Unit</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input type="number" class="form-control" id="costPerUnit" name="costPerUnit" step="0.01" min="0" placeholder="0.50">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="notes" class="form-label">Notes</label>
                        <textarea class="form-control" id="notes" name="notes" rows="3" placeholder="Any additional notes about this medicine..."></textarea>
                    </div>

                    <div class="form-group">
                        <label for="sideEffects" class="form-label">Known Side Effects</label>
                        <textarea class="form-control" id="sideEffects" name="sideEffects" rows="2" placeholder="List any known side effects..."></textarea>
                    </div>
                </div>

                <!-- Form Actions -->
                <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                    <a href="/medicine/dashboard" class="btn btn-secondary">
                        <i class="fas fa-times me-2"></i>Cancel
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Save Medicine
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Auto-populate remaining pills with total pills if not specified
        document.getElementById('quantity.totalPills').addEventListener('change', function() {
            const remainingPillsInput = document.getElementById('quantity.remainingPills');
            if (!remainingPillsInput.value) {
                remainingPillsInput.value = this.value;
            }
        });

        // Form validation
        document.querySelector('form').addEventListener('submit', function(e) {
            const totalPills = parseInt(document.getElementById('quantity.totalPills').value || 0);
            const remainingPills = parseInt(document.getElementById('quantity.remainingPills').value || 0);
            
            if (remainingPills > totalPills) {
                e.preventDefault();
                alert('Remaining pills cannot be more than total pills.');
                return;
            }
        });
    </script>
</body>
</html>
