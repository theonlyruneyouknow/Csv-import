                            <a href="/tasks" class="nav-accordion-item">üìã Tasks Dashboard</a>
                            <a href="/dropship" class="nav-accordion-item">üö¢ Dropship Dashboard</a>
                            <div class="nav-accordion-divider"></div>
                            <a href="/purchase-orders/line-items-manager" class="nav-accordion-item">üì¶ Line Items Manager</a>
                            <a href="/purchase-orders/tracking-dashboard" class="nav-accordion-item">üöö 17Track Dashboard</a>
                            <a href="/purchase-orders/notes-manager" class="nav-accordion-item">üìù Notes Manager</a>
                        </div>
                    </div>

                    <!-- Combined Options Button -->
                    <div class="nav-section">
                        <button class="nav-options-btn" onclick="toggleOptionsDropdown()">
                            ‚öôÔ∏è Options <span class="dropdown-icon">‚ñº</span>
                        </button>
                        <div id="optionsDropdown" class="nav-dropdown-content">
                            <a href="/" class="nav-dropdown-item">ÔøΩ PO Dashboard</a>
                            <a href="/receiving" class="nav-dropdown-item">üöö Receiving Dashboard</a>
                            <a href="/tasks" class="nav-dropdown-item">üìã Tasks Dashboard</a>
                            <a href="/dropship" class="nav-dropdown-item">üö¢ Dropship Dashboard</a>
                            <a href="/purchase-orders/trouble-seed" class="nav-dropdown-item">‚ö†Ô∏è Trouble Seed</a>
                            <a href="/purchase-orders/orphaned-line-items" class="nav-dropdown-item">üßπ Orphaned Items</a>
                            <a href="/email-client" class="nav-dropdown-item">üìß Email Client</a>
                            <div class="nav-divider"></div>
                            <button class="nav-dropdown-item" onclick="openStatusModal()">
                                üè∑Ô∏è Manage PO Status Options
                            </button>
                            <button class="nav-dropdown-item" onclick="openLineItemStatusModal()">
                                üìã Manage Line Item Status Options
                            </button>
                            <button class="nav-dropdown-item" onclick="openCarrierModal()">
                                üöö Manage Carriers
                            </button>
                        </div>
                    </div>

                    <!-- Imports Section -->
                    <div class="nav-section">
                        <button class="nav-imports-btn" onclick="toggleImportsDropdown()">
                            üìÅ Import <span class="dropdown-icon">‚ñº</span>
                        </button>
                        <div id="importsDropdown" class="nav-dropdown-content">
                            <a href="/upload" class="nav-dropdown-item">üìÑ Purchase Orders CSV</a>
                            <a href="/upload-line-items" class="nav-dropdown-item">üì¶ Line Items CSV</a>
                        </div>
                    </div>
                </div>

                <!-- User Info -->
                <% if (typeof user !== 'undefined' && user) { %>
                <div class="user-info" title="<%= user.firstName %> <%= user.lastName %> (<%= user.role %>) - Online">
                    <div class="user-avatar">
                        <%= user.firstName ? user.firstName.charAt(0).toUpperCase() : 'U' %><%= user.lastName ? user.lastName.charAt(0).toUpperCase() : '' %>
                        <div class="user-status-indicator" title="Online"></div>
                    </div>
                    <div class="dropdown">
                        <button class="btn btn-sm btn-outline-light dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-user"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <!-- User Info Header -->
                            <li class="dropdown-user-info">
                                <div class="dropdown-user-avatar">
                                    <%= user.firstName ? user.firstName.charAt(0).toUpperCase() : 'U' %><%= user.lastName ? user.lastName.charAt(0).toUpperCase() : '' %>
                                </div>
                                <div class="dropdown-user-details">
                                    <div class="dropdown-user-name"><%= user.firstName %> <%= user.lastName %></div>
                                    <div class="dropdown-user-role"><%= user.role %></div>
                                    <div class="dropdown-user-status">Online</div>
                                </div>
                            </li>
                            <li><hr class="dropdown-divider" style="margin: 0;"></li>
                            
                            <% if (user.permissions && user.permissions.manageUsers) { %>
                            <li><a class="dropdown-item" href="/auth/admin/users">
                                <i class="fas fa-users me-2"></i>User Management
                            </a></li>
                            <li><a class="dropdown-item" href="/auth/admin/audit-logs">
                                <i class="fas fa-history me-2"></i>Audit Logs
                            </a></li>
                            <% } %>
                            <% if (user.role === 'admin' || user.role === 'manager') { %>
                            <li><a class="dropdown-item" href="/auth/admin/test-email">
                                <i class="fas fa-envelope me-2"></i>Test Email
                            </a></li>
                            <% } %>
                            <% if ((user.permissions && user.permissions.manageUsers) || user.role === 'admin' || user.role === 'manager') { %>
                            <li><hr class="dropdown-divider"></li>
                            <% } %>
                            <li><a class="dropdown-item" href="/auth/logout">
                                <i class="fas fa-sign-out-alt me-2"></i>Logout
                            </a></li>
                        </ul>
                    </div>
                </div>
                <% } %>
            </div>
        </div>

        <!-- Statistics Grid -->
        <div class="stats-container">
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="number"><%= stats.total %></div>
                    <div class="label">Total Vendors</div>
                </div>
                <div class="stat-card organic">
                    <div class="number"><%= stats.organic %></div>
                    <div class="label">üå± Organic Certified</div>
                </div>
                <div class="stat-card active">
                    <div class="number"><%= stats.active %></div>
                    <div class="label">Active Vendors</div>
                </div>
                <div class="stat-card inactive">
                    <div class="number"><%= stats.inactive %></div>
                    <div class="label">Inactive Vendors</div>
                </div>
                <div class="stat-card">
                    <div class="number"><%= stats.withContact %></div>
                    <div class="label">With Contact Info</div>
                </div>
            </div>
        </div>

        <!-- Filters Section -->
        <div class="filters-section">
            <h5 style="margin-bottom: 15px;"><i class="fas fa-filter"></i> Filters & Search</h5>
            <form id="filtersForm" method="GET" action="/enhanced-vendors">
                <div class="filters-grid">
                    <div class="filter-group">
                        <label for="search"><i class="fas fa-search"></i> Search</label>
                        <input type="text" id="search" name="search" placeholder="Vendor name, code, email..." value="<%= filters.search %>">
                    </div>
                    
                    <div class="filter-group">
                        <label for="status">Status</label>
                        <select id="status" name="status">
                            <option value="all" <%= filters.status === 'all' ? 'selected' : '' %>>All Statuses</option>
                            <option value="Active" <%= filters.status === 'Active' ? 'selected' : '' %>>Active</option>
                            <option value="Inactive" <%= filters.status === 'Inactive' ? 'selected' : '' %>>Inactive</option>
                        </select>
                    </div>
                    
                    <div class="filter-group">
                        <label for="vendorType">Vendor Type</label>
                        <select id="vendorType" name="vendorType">
                            <option value="all" <%= filters.vendorType === 'all' ? 'selected' : '' %>>All Types</option>
                            <option value="Standard" <%= filters.vendorType === 'Standard' ? 'selected' : '' %>>Standard</option>
                            <option value="Preferred" <%= filters.vendorType === 'Preferred' ? 'selected' : '' %>>Preferred</option>
                            <option value="Wholesale" <%= filters.vendorType === 'Wholesale' ? 'selected' : '' %>>Wholesale</option>
                            <option value="Retail" <%= filters.vendorType === 'Retail' ? 'selected' : '' %>>Retail</option>
                        </select>
                    </div>
                    
                    <div class="filter-group">
                        <label for="organic">Organic Certification</label>
                        <select id="organic" name="organic">
                            <option value="all" <%= filters.organic === 'all' ? 'selected' : '' %>>All Vendors</option>
                            <option value="organic-only" <%= filters.organic === 'organic-only' ? 'selected' : '' %>>üå± Organic Only</option>
                            <option value="non-organic" <%= filters.organic === 'non-organic' ? 'selected' : '' %>>Non-Organic Only</option>
                        </select>
                    </div>
                    
                    <div class="filter-group">
                        <label for="sortBy">Sort By</label>
                        <select id="sortBy" name="sortBy">
                            <option value="vendorName" <%= filters.sortBy === 'vendorName' ? 'selected' : '' %>>Vendor Name</option>
                            <option value="vendorCode" <%= filters.sortBy === 'vendorCode' ? 'selected' : '' %>>Vendor Code</option>
                            <option value="status" <%= filters.sortBy === 'status' ? 'selected' : '' %>>Status</option>
                        </select>
                    </div>
                </div>
                
                <div class="action-buttons">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search"></i> Apply Filters
                    </button>
                    <a href="/enhanced-vendors" class="btn btn-outline-primary">
                        <i class="fas fa-redo"></i> Reset
                    </a>
                </div>
            </form>
        </div>

        <!-- Vendors List -->
        <div id="vendorsList">
            <% if (vendors.length === 0) { %>
                <div class="empty-state">
                    <i class="fas fa-inbox"></i>
                    <h3>No Vendors Found</h3>
                    <p>Try adjusting your filters or search criteria</p>
                </div>
            <% } else { %>
                <% vendors.forEach(vendor => { %>
                    <div class="vendor-card <%= vendor.hasOrganicCertification ? 'has-organic' : '' %>">
                        <!-- Card Header -->
                        <div class="vendor-card-header">
                            <div class="vendor-name">
                                <a href="/enhanced-vendors/vendor/<%= vendor._id %>">
                                    <%= vendor.vendorName %>
                                </a>
                            </div>
                            <div class="vendor-code">Code: <%= vendor.vendorCode || 'N/A' %></div>
                            
                            <div class="vendor-badges">
                                <% if (vendor.hasOrganicCertification) { %>
                                    <span class="badge badge-organic">
                                        <i class="fas fa-leaf"></i> Organic Certified
                                    </span>
                                <% } %>
                                <% if (vendor.status === 'Active') { %>
                                    <span class="badge badge-active">Active</span>
                                <% } else { %>
                                    <span class="badge badge-inactive">Inactive</span>
                                <% } %>
                                <span class="badge badge-standard">
                                    <%= vendor.vendorType || 'Standard' %>
                                </span>
                            </div>
                        </div>

                        <!-- Card Body -->
                        <div class="vendor-card-body">
                            <div class="info-grid">
                                <!-- Contact Information -->
                                <div class="info-section">
                                    <h6><i class="fas fa-address-card"></i> Contact Information</h6>
                                    <% if (vendor.contactInfo && vendor.contactInfo.primaryContact) { %>
                                        <div class="info-item">
                                            <i class="fas fa-user"></i>
                                            <strong><%= vendor.contactInfo.primaryContact.name || 'N/A' %></strong>
                                        </div>
                                        <div class="info-item">
                                            <i class="fas fa-envelope"></i>
                                            <% if (vendor.contactInfo.primaryContact.email) { %>
                                                <a href="mailto:<%= vendor.contactInfo.primaryContact.email %>">
                                                    <%= vendor.contactInfo.primaryContact.email %>
                                                </a>
                                            <% } else { %>
                                                N/A
                                            <% } %>
                                        </div>
                                        <div class="info-item">
                                            <i class="fas fa-phone"></i>
                                            <%= vendor.contactInfo.primaryContact.phone || vendor.phone || 'N/A' %>
                                        </div>
                                    <% } else { %>
                                        <div class="info-item">
                                            <i class="fas fa-envelope"></i>
                                            <% if (vendor.mainEmail) { %>
                                                <a href="mailto:<%= vendor.mainEmail %>"><%= vendor.mainEmail %></a>
                                            <% } else { %>
                                                No email
                                            <% } %>
                                        </div>
                                        <div class="info-item">
                                            <i class="fas fa-phone"></i>
                                            <%= vendor.phone || 'N/A' %>
                                        </div>
                                    <% } %>
                                    <% if (vendor.website) { %>
                                        <div class="info-item">
                                            <i class="fas fa-globe"></i>
                                            <a href="<%= vendor.website %>" target="_blank">Website</a>
                                        </div>
                                    <% } %>
                                </div>

                                <!-- Address Information -->
                                <div class="info-section">
                                    <h6><i class="fas fa-map-marker-alt"></i> Address</h6>
                                    <% if (vendor.address) { %>
                                        <div class="info-item">
                                            <%= typeof vendor.address === 'string' ? vendor.address : 
                                                [vendor.address.street, vendor.address.city, vendor.address.state, vendor.address.zip].filter(Boolean).join(', ') %>
                                        </div>
                                    <% } else { %>
                                        <div class="info-item text-muted">No address on file</div>
                                    <% } %>
                                </div>

                                <!-- Statistics -->
                                <div class="info-section">
                                    <h6><i class="fas fa-chart-line"></i> Statistics</h6>
                                    <div class="info-item">
                                        <i class="fas fa-shopping-cart"></i>
                                        Purchase Orders: <%= vendor.poCount || 0 %>
                                    </div>
                                    <div class="info-item">
                                        <i class="fas fa-calendar"></i>
                                        Added: <%= vendor.createdAt ? new Date(vendor.createdAt).toLocaleDateString() : 'N/A' %>
                                    </div>
                                </div>
                            </div>

                            <!-- Action Buttons -->
                            <div class="action-buttons">
                                <a href="/enhanced-vendors/vendor/<%= vendor._id %>" class="btn btn-primary">
                                    <i class="fas fa-eye"></i> View Full Details
                                </a>
                                <button class="btn btn-info" onclick="editVendor('<%= vendor._id %>')">
                                    <i class="fas fa-edit"></i> Edit
                                </button>
                                <% if (vendor.hasOrganicCertification) { %>
                                    <button class="btn btn-outline-success" onclick="toggleOrganic('<%= vendor._id %>')">
                                        <i class="fas fa-leaf"></i> <span id="organic-toggle-<%= vendor._id %>">Show</span> Organic Info
                                    </button>
                                <% } %>
                            </div>
                        </div>

                        <!-- Organic Section (Collapsible) -->
                        <% if (vendor.hasOrganicCertification && vendor.organicVendor) { %>
                            <div class="organic-section" id="organic-section-<%= vendor._id %>">
                                <div class="organic-header" onclick="toggleOrganic('<%= vendor._id %>')">
                                    <h5>
                                        <i class="fas fa-leaf"></i> Organic Certification Details
                                    </h5>
                                    <i class="fas fa-chevron-down" id="organic-icon-<%= vendor._id %>"></i>
                                </div>
                                <div class="organic-content" id="organic-content-<%= vendor._id %>">
                                    <div class="cert-info-grid">
                                        <div class="cert-item">
                                            <strong>Status</strong>
                                            <span><%= vendor.organicVendor.status || 'N/A' %></span>
                                        </div>
                                        <div class="cert-item">
                                            <strong>Certification Agency</strong>
                                            <span><%= vendor.organicVendor.organicCertificationAgency || 'N/A' %></span>
                                        </div>
                                        <div class="cert-item">
                                            <strong>Last Certified</strong>
                                            <span>
                                                <%= vendor.organicVendor.lastOrganicCertificationDate ? 
                                                    new Date(vendor.organicVendor.lastOrganicCertificationDate).toLocaleDateString() : 'N/A' %>
                                            </span>
                                        </div>
                                        <div class="cert-item">
                                            <strong>Expiry Date</strong>
                                            <span>
                                                <%= vendor.organicVendor.organicCertificationExpiryDate ? 
                                                    new Date(vendor.organicVendor.organicCertificationExpiryDate).toLocaleDateString() : 'N/A' %>
                                            </span>
                                        </div>
                                    </div>

                                    <div class="action-buttons">
                                        <% if (vendor.organicVendor.certificate) { %>
                                            <button class="btn btn-outline-primary" onclick="viewDocument('<%= vendor._id %>', 'certificate')">
                                                <i class="fas fa-file-pdf"></i> View Certificate
                                            </button>
                                        <% } %>
                                        
                                        <% if (vendor.organicDatabaseUrl) { %>
                                            <a href="<%= vendor.organicDatabaseUrl %>" target="_blank" class="btn btn-outline-success">
                                                <i class="fas fa-external-link-alt"></i> USDA Database
                                            </a>
                                        <% } %>
                                        
                                        <% if (vendor.organicSeeds && vendor.organicSeeds.length > 0) { %>
                                            <button class="btn btn-outline-success" onclick="viewOrganicSeeds('<%= vendor._id %>')">
                                                <i class="fas fa-seedling"></i> View Organic Seeds (<%= vendor.organicSeeds.length %>)
                                            </button>
                                        <% } else if (vendor.organicSeedsRawData) { %>
                                            <button class="btn btn-outline-success" onclick="viewOrganicSeeds('<%= vendor._id %>')">
                                                <i class="fas fa-seedling"></i> View Seeds Data
                                            </button>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        <% } %>
                    </div>
                <% }); %>
            <% } %>
        </div>

        <!-- Pagination -->
        <% if (pagination.totalPages > 1) { %>
            <div class="pagination-container">
                <button class="pagination-btn" onclick="changePage(<%= pagination.currentPage - 1 %>)" <%= !pagination.hasPrevPage ? 'disabled' : '' %>>
                    <i class="fas fa-chevron-left"></i> Previous
                </button>
                
                <span class="pagination-info">
                    Page <%= pagination.currentPage %> of <%= pagination.totalPages %>
                    (<%= pagination.totalVendors %> vendors)
                </span>
                
                <button class="pagination-btn" onclick="changePage(<%= pagination.currentPage + 1 %>)" <%= !pagination.hasNextPage ? 'disabled' : '' %>>
                    Next <i class="fas fa-chevron-right"></i>
                </button>
            </div>
        <% } %>
    </div>

    <script>
        // Navigation accordion toggle
        function toggleAccordion(accordionId) {
            const accordion = document.getElementById(accordionId);
            const allAccordions = document.querySelectorAll('.nav-accordion-content, .nav-dropdown-content');
            
            allAccordions.forEach(acc => {
                if (acc.id !== accordionId) {
                    acc.classList.remove('show');
                }
            });
            
            accordion.classList.toggle('show');
        }

        // Toggle Options dropdown
        function toggleOptionsDropdown() {
            const dropdown = document.getElementById('optionsDropdown');
            const allDropdowns = document.querySelectorAll('.nav-accordion-content, .nav-dropdown-content');
            
            allDropdowns.forEach(dd => {
                if (dd.id !== 'optionsDropdown') {
                    dd.classList.remove('show');
                }
            });
            
            dropdown.classList.toggle('show');
        }

        // Toggle Imports dropdown
        function toggleImportsDropdown() {
            const dropdown = document.getElementById('importsDropdown');
            const allDropdowns = document.querySelectorAll('.nav-accordion-content, .nav-dropdown-content');
            
            allDropdowns.forEach(dd => {
                if (dd.id !== 'importsDropdown') {
                    dd.classList.remove('show');
                }
            });
            
            dropdown.classList.toggle('show');
        }

        // Close dropdowns when clicking outside
        document.addEventListener('click', function(event) {
            if (!event.target.closest('.nav-section')) {
                document.querySelectorAll('.nav-accordion-content, .nav-dropdown-content').forEach(dropdown => {
                    dropdown.classList.remove('show');
                });
            }
        });

        // Modal functions (placeholders for future implementation)
        function openStatusModal() {
            alert('PO Status Options management coming soon');
        }

        function openLineItemStatusModal() {
            alert('Line Item Status Options management coming soon');
        }

        function openCarrierModal() {
            alert('Carrier management coming soon');
        }

        // Toggle organic section
        function toggleOrganic(vendorId) {
            const content = document.getElementById('organic-content-' + vendorId);
            const icon = document.getElementById('organic-icon-' + vendorId);
            const toggleText = document.getElementById('organic-toggle-' + vendorId);
            
            if (content.classList.contains('show')) {
                content.classList.remove('show');
                if (icon) icon.className = 'fas fa-chevron-down';
                if (toggleText) toggleText.textContent = 'Show';
            } else {
                content.classList.add('show');
                if (icon) icon.className = 'fas fa-chevron-up';
                if (toggleText) toggleText.textContent = 'Hide';
            }
        }

        // Pagination
        function changePage(page) {
            const url = new URL(window.location.href);
            url.searchParams.set('page', page);
            window.location.href = url.toString();
        }

        // Edit vendor (placeholder - will implement properly)
        function editVendor(vendorId) {
            window.location.href = `/enhanced-vendors/vendor/${vendorId}?edit=true`;
        }

        // View document (placeholder)
        function viewDocument(vendorId, docType) {
            alert('Document viewer coming soon for vendor ' + vendorId);
        }

        // View organic seeds (placeholder)
        function viewOrganicSeeds(vendorId) {
            alert('Organic seeds viewer coming soon for vendor ' + vendorId);
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
