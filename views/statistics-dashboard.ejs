                    <div class="stats-card">
                        <h3 class="section-title">üèÜ Top Vendors by Value</h3>
                        <ul class="top-list">
                            <% todayStats.vendors.topVendorsByVolume.slice(0, 5).forEach((vendor, index) => { %>
                            <li>
                                <div>
                                    <span class="rank-badge"><%= index + 1 %></span>
                                    <strong><%= vendor.vendor %></strong>
                                    <small class="text-muted">(<%= vendor.poCount %> POs)</small>
                                </div>
                                <span class="metric-value">$<%= vendor.totalValue.toLocaleString() %></span>
                            </li>
                            <% }); %>
                        </ul>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="stats-card">
                        <h3 class="section-title">‚úÖ Tasks Overview</h3>
                        <div class="metric-row">
                            <span class="metric-label">Total Tasks</span>
                            <span class="metric-value"><%= todayStats.tasks.totalTasks %></span>
                        </div>
                        <div class="metric-row">
                            <span class="metric-label">Completed</span>
                            <span class="metric-value"><%= todayStats.tasks.completedTasks %></span>
                        </div>
                        <div class="metric-row">
                            <span class="metric-label">Pending</span>
                            <span class="metric-value"><%= todayStats.tasks.pendingTasks %></span>
                        </div>
