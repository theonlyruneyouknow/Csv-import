            const percentSign = change.percent > 0 ? '+' : '';

            return `
                <div style="background: white; padding: 15px; border-radius: 6px; border-left: 3px solid ${trendColor};">
                    <div style="font-size: 12px; color: #64748b; margin-bottom: 5px;">${label}</div>
