                    </div>
                </div>
            </div>

            <!-- Generated timestamp -->
            <div class="text-center text-muted mt-4">
                <small>Report generated: <%= new Date(todayStats.generatedAt).toLocaleString() %></small>
            </div>

        <% } else { %>
            <div class="stats-card text-center">
                <h3>No Statistics Available</h3>
                <p class="text-muted">Click the button above to generate today's statistics</p>
            </div>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let currentPeriodType = 'daily';
        let currentReferenceDate = new Date();

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            updatePeriodLabel();
        });

        // Update the report title and period label based on selected period type
        function updateReportTitle() {
            const periodType = document.getElementById('periodType').value;
            const titleMap = {
                'daily': 'Daily Statistics Report',
                'weekly': 'Weekly Statistics Report',
                'bi-weekly': 'Bi-Weekly Statistics Report',
                'monthly': 'Monthly Statistics Report',
                'quarterly': 'Quarterly Statistics Report',
                'yearly': 'Yearly Statistics Report'
            };
            document.getElementById('reportTitle').textContent = 'üìä ' + titleMap[periodType];
        }

        // Update the current period label
        function updatePeriodLabel() {
            const periodType = document.getElementById('periodType').value;
            const date = currentReferenceDate;
            let label = '';

            switch(periodType) {
                case 'daily':
                    label = date.toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' });
                    break;
                case 'weekly':
                    const sunday = new Date(date);
                    sunday.setDate(date.getDate() - date.getDay());
                    label = 'Week of ' + sunday.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
                    break;
                case 'bi-weekly':
                    const biWeekSunday = new Date(date);
                    biWeekSunday.setDate(date.getDate() - date.getDay());
                    label = 'Bi-Week starting ' + biWeekSunday.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
                    break;
                case 'monthly':
                    label = date.toLocaleDateString('en-US', { month: 'long', year: 'numeric' });
                    break;
                case 'quarterly':
                    const quarter = Math.floor(date.getMonth() / 3) + 1;
                    label = 'Q' + quarter + ' ' + date.getFullYear();
                    break;
                case 'yearly':
                    label = date.getFullYear().toString();
                    break;
            }

            document.getElementById('currentPeriodLabel').textContent = label;
        }

        // Change period type
        function changePeriodType() {
            currentPeriodType = document.getElementById('periodType').value;
            updateReportTitle();
            updatePeriodLabel();
        }

        // Navigate to previous/next period
        function navigatePeriod(direction) {
            const periodType = document.getElementById('periodType').value;
            const multiplier = direction === 'prev' ? -1 : 1;

            switch(periodType) {
                case 'daily':
                    currentReferenceDate.setDate(currentReferenceDate.getDate() + (1 * multiplier));
                    break;
                case 'weekly':
                    currentReferenceDate.setDate(currentReferenceDate.getDate() + (7 * multiplier));
                    break;
                case 'bi-weekly':
                    currentReferenceDate.setDate(currentReferenceDate.getDate() + (14 * multiplier));
                    break;
                case 'monthly':
                    currentReferenceDate.setMonth(currentReferenceDate.getMonth() + (1 * multiplier));
                    break;
                case 'quarterly':
                    currentReferenceDate.setMonth(currentReferenceDate.getMonth() + (3 * multiplier));
                    break;
                case 'yearly':
                    currentReferenceDate.setFullYear(currentReferenceDate.getFullYear() + (1 * multiplier));
                    break;
            }

            updatePeriodLabel();
            // Auto-load stats for the new period
            loadStatsForCurrentPeriod();
        }

        // Generate stats for the selected period
        async function generateStats() {
            const btn = event.target;
            const periodType = document.getElementById('periodType').value;
            btn.disabled = true;
            btn.textContent = '‚è≥ Generating...';

            try {
                const response = await fetch('/statistics/generate-stats', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ 
                        force: true,
                        periodType: periodType,
                        referenceDate: currentReferenceDate.toISOString()
                    })
                });

                const data = await response.json();

                if (data.success) {
                    alert('‚úÖ Statistics generated successfully!');
                    window.location.reload();
                } else {
                    alert('‚ùå Error: ' + data.error);
                    btn.disabled = false;
                    btn.textContent = 'üîÑ Generate Stats';
                }
            } catch (error) {
                alert('‚ùå Error: ' + error.message);
                btn.disabled = false;
                btn.textContent = 'üîÑ Generate Stats';
            }
        }

        // Export statistics to Excel
        async function exportToExcel() {
            const periodType = document.getElementById('periodType').value;
            
            try {
                const response = await fetch('/statistics/export-excel', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        periodType: periodType,
                        referenceDate: currentReferenceDate.toISOString()
                    })
                });

                if (!response.ok) {
                    const error = await response.json();
                    throw new Error(error.message || 'Failed to export Excel');
                }

                // Download the file
                const blob = await response.blob();
                const url = window.URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.href = url;
                a.download = `Statistics_${periodType}_${currentReferenceDate.toISOString().split('T')[0]}.xlsx`;
                document.body.appendChild(a);
                a.click();
                window.URL.revokeObjectURL(url);
                document.body.removeChild(a);

                alert('‚úÖ Excel file downloaded successfully!');
            } catch (error) {
                alert('‚ùå Error exporting Excel: ' + error.message);
            }
        }

        // Show email dialog
        function showEmailDialog() {
            const emails = prompt('Enter recipient email addresses (comma-separated):');
            if (emails && emails.trim()) {
                emailReport(emails);
            }
        }

        // Email statistics report
        async function emailReport(emailsString) {
            const periodType = document.getElementById('periodType').value;
            const recipients = emailsString.split(',').map(e => e.trim()).filter(e => e);

            if (recipients.length === 0) {
                alert('‚ùå Please provide at least one email address');
                return;
            }

            try {
                const response = await fetch('/statistics/email-report', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        periodType: periodType,
                        referenceDate: currentReferenceDate.toISOString(),
                        recipients: recipients
                    })
                });

                const result = await response.json();

                if (!response.ok) {
                    throw new Error(result.message || 'Failed to send email');
                }

                alert(`‚úÖ ${result.message}`);
            } catch (error) {
                alert('‚ùå Error sending email: ' + error.message);
            }
