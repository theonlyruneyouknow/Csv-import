    <script>
        let currentPeriodType = '<%= typeof currentPeriodType !== "undefined" ? currentPeriodType : "daily" %>';
        let currentReferenceDate = new Date('<%= typeof currentDate !== "undefined" ? currentDate : new Date().toISOString() %>');
        let currentDetailedList = null; // Track currently loaded detailed list

        // Toggle period comparison visibility
        function togglePeriodComparison() {
            const comparisonDiv = document.getElementById('periodComparison');
            const btn = document.getElementById('popCompareBtn');
            
            if (comparisonDiv.classList.contains('hidden')) {
                comparisonDiv.classList.remove('hidden');
                btn.textContent = 'üìä POP Compare';
                btn.style.background = '#06b6d4';
            } else {
                comparisonDiv.classList.add('hidden');
                btn.textContent = 'üìä Show POP';
                btn.style.background = '#10b981';
            }
        }

        // Navigation accordion toggle
        function toggleAccordion(accordionId) {
            const accordion = document.getElementById(accordionId);
            const allAccordions = document.querySelectorAll('.nav-accordion-content');
            
            // Close all other accordions
            allAccordions.forEach(acc => {
                if (acc.id !== accordionId) {
                    acc.style.display = 'none';
                }
            });
            
            // Toggle current accordion
            if (accordion.style.display === 'block') {
                accordion.style.display = 'none';
            } else {
                accordion.style.display = 'block';
            }
        }

        // Close accordions when clicking outside
        document.addEventListener('click', function(event) {
            if (!event.target.matches('.nav-accordion-btn')) {
                const accordions = document.querySelectorAll('.nav-accordion-content');
                accordions.forEach(acc => acc.style.display = 'none');
            }
        });

        // Sticky header scroll behavior - only hide period comparison
        let lastScrollTop = 0;
        window.addEventListener('scroll', function() {
            const header = document.getElementById('stickyHeader');
            const st = window.pageYOffset || document.documentElement.scrollTop;
            
            if (st > 100) {
                header.classList.add('scrolled');
            } else {
                header.classList.remove('scrolled');
            }
            
            lastScrollTop = st <= 0 ? 0 : st;
        });

        // Tab switching function
        function switchTab(tab) {
            const statsTab = document.getElementById('statsTab');
            const listsTab = document.getElementById('listsTab');
            const statsContent = document.getElementById('statsTabContent');
            const listsContent = document.getElementById('listsTabContent');
            
            if (tab === 'stats') {
                statsTab.style.background = '#667eea';
                statsTab.style.color = 'white';
                listsTab.style.background = '#e2e8f0';
                listsTab.style.color = '#64748b';
                statsContent.style.display = 'block';
                listsContent.style.display = 'none';
            } else {
                statsTab.style.background = '#e2e8f0';
                statsTab.style.color = '#64748b';
                listsTab.style.background = '#667eea';
                listsTab.style.color = 'white';
                statsContent.style.display = 'none';
                listsContent.style.display = 'block';
            }
        }

        // Reload the currently active detailed list
        function reloadCurrentDetailedList() {
            if (currentDetailedList) {
                currentDetailedList.func(...currentDetailedList.args);
            }
        }

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            // Set the period type selector
            document.getElementById('periodType').value = currentPeriodType;
            
            updateReportTitle();
            updatePeriodLabel();
            
            // Load period comparison if stats exist
            <% if (todayStats) { %>
                loadPeriodComparison();
            <% } %>
        });

        // Update the report title and period label based on selected period type
        function updateReportTitle() {
            const periodType = document.getElementById('periodType').value;
            const titleMap = {
                'daily': 'Daily Statistics Report',
                'weekly': 'Weekly Statistics Report',
                'bi-weekly': 'Bi-Weekly Statistics Report',
                'monthly': 'Monthly Statistics Report',
                'quarterly': 'Quarterly Statistics Report',
                'yearly': 'Yearly Statistics Report'
            };
            document.getElementById('reportTitle').textContent = 'üìä ' + titleMap[periodType];
        }

        // Update the current period label
        function updatePeriodLabel() {
            const periodType = document.getElementById('periodType').value;
            const date = currentReferenceDate;
            let label = '';

            switch(periodType) {
                case 'daily':
                    label = date.toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' });
                    break;
                case 'weekly':
                    const sunday = new Date(date);
                    sunday.setDate(date.getDate() - date.getDay());
                    label = 'Week of ' + sunday.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
                    break;
                case 'bi-weekly':
                    const biWeekSunday = new Date(date);
                    biWeekSunday.setDate(date.getDate() - date.getDay());
                    label = 'Bi-Week starting ' + biWeekSunday.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
                    break;
                case 'monthly':
                    label = date.toLocaleDateString('en-US', { month: 'long', year: 'numeric' });
                    break;
                case 'quarterly':
                    const quarter = Math.floor(date.getMonth() / 3) + 1;
                    label = 'Q' + quarter + ' ' + date.getFullYear();
                    break;
                case 'yearly':
                    label = date.getFullYear().toString();
                    break;
            }

            document.getElementById('currentPeriodLabel').textContent = label;
        }

        // Change period type
        function changePeriodType() {
            currentPeriodType = document.getElementById('periodType').value;
            updateReportTitle();
            updatePeriodLabel();
            // Load stats for the new period type
            loadStatsForCurrentPeriod();
        }

        // Navigate to previous/next period
        function navigatePeriod(direction) {
            const periodType = document.getElementById('periodType').value;
            const multiplier = direction === 'prev' ? -1 : 1;

            switch(periodType) {
                case 'daily':
                    currentReferenceDate.setDate(currentReferenceDate.getDate() + (1 * multiplier));
                    break;
                case 'weekly':
                    currentReferenceDate.setDate(currentReferenceDate.getDate() + (7 * multiplier));
                    break;
                case 'bi-weekly':
                    currentReferenceDate.setDate(currentReferenceDate.getDate() + (14 * multiplier));
                    break;
                case 'monthly':
                    currentReferenceDate.setMonth(currentReferenceDate.getMonth() + (1 * multiplier));
                    break;
                case 'quarterly':
                    currentReferenceDate.setMonth(currentReferenceDate.getMonth() + (3 * multiplier));
                    break;
                case 'yearly':
                    currentReferenceDate.setFullYear(currentReferenceDate.getFullYear() + (1 * multiplier));
                    break;
            }

            updatePeriodLabel();
            // Auto-load stats for the new period
            loadStatsForCurrentPeriod();
            // Reload the currently active detailed list if any
            reloadCurrentDetailedList();
        }

        // Load and display stats for the current period
        async function loadStatsForCurrentPeriod() {
            const periodType = document.getElementById('periodType').value;
            
            try {
                const response = await fetch(`/statistics/get-stats`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ 
                        periodType: periodType,
                        referenceDate: currentReferenceDate.toISOString()
                    })
                });

                const data = await response.json();

                if (data.success && data.stats) {
                    // Stats exist - reload the page with the new data
                    window.location.href = `/statistics/dashboard?periodType=${periodType}&date=${currentReferenceDate.toISOString()}`;
                } else {
                    // No stats found - show message
                    alert('‚ÑπÔ∏è No statistics found for this period. Click "Generate Statistics" to create them.');
                }
            } catch (error) {
                console.error('Error loading stats:', error);
                alert('‚ùå Error loading statistics for this period');
            }
        }

        // Generate stats for the selected period
        async function generateStats() {
            const btn = event.target;
            const periodType = document.getElementById('periodType').value;
            btn.disabled = true;
            btn.textContent = '‚è≥ Generating...';

            try {
                const response = await fetch('/statistics/generate-stats', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ 
                        force: true,
                        periodType: periodType,
                        referenceDate: currentReferenceDate.toISOString()
                    })
                });

                const data = await response.json();

                if (data.success) {
                    alert('‚úÖ Statistics generated successfully!');
                    window.location.reload();
                } else {
                    alert('‚ùå Error: ' + data.error);
                    btn.disabled = false;
                    btn.textContent = 'üîÑ Generate Stats';
                }
            } catch (error) {
                alert('‚ùå Error: ' + error.message);
                btn.disabled = false;
                btn.textContent = 'üîÑ Generate Stats';
            }
        }

        // Export statistics to Excel
        async function exportToExcel() {
            const periodType = document.getElementById('periodType').value;
            
            try {
                const response = await fetch('/statistics/export-excel', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        periodType: periodType,
                        referenceDate: currentReferenceDate.toISOString()
                    })
                });

                if (!response.ok) {
                    const error = await response.json();
                    throw new Error(error.message || 'Failed to export Excel');
                }

                // Download the file
                const blob = await response.blob();
                const url = window.URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.href = url;
                a.download = `Statistics_${periodType}_${currentReferenceDate.toISOString().split('T')[0]}.xlsx`;
                document.body.appendChild(a);
                a.click();
                window.URL.revokeObjectURL(url);
                document.body.removeChild(a);

                alert('‚úÖ Excel file downloaded successfully!');
            } catch (error) {
                alert('‚ùå Error exporting Excel: ' + error.message);
            }
        }

