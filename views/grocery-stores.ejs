<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="fas fa-store me-2"></i><%= title %></h2>
            <div>
                <a href="/grocery/dashboard" class="btn btn-outline-secondary me-2">
                    <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                </a>
                <a href="/grocery/stores/new" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Add Store
                </a>
            </div>
        </div>

        <% if (stores && stores.length > 0) { %>
            <div class="row">
                <% stores.forEach(store => { %>
                    <div class="col-md-6 col-lg-4 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= store.name %>
                                    <% if (store.isFavorite) { %>
                                        <i class="fas fa-star text-warning ms-1"></i>
                                    <% } %>
                                </h5>
                                <% if (store.chain) { %>
                                    <p class="text-muted mb-2"><%= store.chain %></p>
                                <% } %>
                                <% if (store.location && store.location.city) { %>
                                    <p class="text-muted small mb-2">
                                        <i class="fas fa-map-marker-alt me-1"></i>
                                        <%= store.location.city %><% if (store.location.state) { %>, <%= store.location.state %><% } %>
                                    </p>
                                <% } %>
                                <button class="btn btn-sm btn-danger" onclick="deleteStore('<%= store._id %>', '<%= store.name %>')">
                                    <i class="fas fa-trash me-1"></i>Delete
                                </button>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="alert alert-info">
                No stores added yet. <a href="/grocery/stores/new">Add your first store</a>
            </div>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        async function deleteStore(id, name) {
            if (!confirm(`Delete ${name}?`)) return;
            
            try {
                const res = await fetch(`/grocery/stores/${id}`, { method: 'DELETE' });
                if (res.ok) location.reload();
                else alert('Error deleting store');
            } catch (err) {
                alert('Error: ' + err.message);
            }
        }
    </script>
</body>
</html>
