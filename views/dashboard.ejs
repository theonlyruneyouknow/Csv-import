                                                            <button
                                                                class="url-btn <%= po.poUrl && po.poUrl.trim() ? 'has-url' : '' %>"
                                                                data-id="<%= po._id %>" data-po="<%= po.poNumber %>"
                                                                data-url="<%= po.poUrl || '' %>"
                                                                title="<%= po.poUrl && po.poUrl.trim() ? 'Edit URL' : 'Add URL' %>">
                                                                üîó
                                                            </button>
                                            </div>
