                    } else {
                        showMessage('Failed to delete file: ' + (data.error || 'Unknown error'), 'error');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    showMessage('Delete failed: ' + error.message, 'error');
                });
            }
        }

