<body>
    <div class="container">
        <div class="header">
            <h1>
                <i class="fas fa-building"></i>
                Vendors Dashboard
            </h1>
            
            <!-- P.O.D. Button -->
            <a href="/purchase-orders" class="pod-button">
                <span class="arrow">←</span>
                <span>P.O.D.</span>
            </a>
            
            <div class="d-flex align-items-center justify-content-between flex-grow-1">
                <%- include('partials/navigation', { currentPage: 'vendors' }) %>
            </div>
        </div>
        
        <!-- Dashboard Description and Actions -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <p class="mb-0">Manage all your vendors, contacts, and relationships</p>
            <a href="/vendors/new" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add New Vendor
            </a>
        </div>

    <div class="container-fluid">
        <!-- Statistics Cards -->
        <div class="row mb-4">
            <div class="col-lg-3 col-md-6 mb-3">
                <div class="stats-card total">
                    <div class="icon">
                        <i class="fas fa-building"></i>
                    </div>
                    <div class="stats-number"><%= stats.totalVendors || 0 %></div>
                    <div class="stats-label">Total Vendors</div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-3">
                <div class="stats-card active">
                    <div class="icon">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <div class="stats-number"><%= stats.activeVendors || 0 %></div>
                    <div class="stats-label">Active Vendors</div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-3">
                <div class="stats-card spending">
                    <div class="icon">
                        <i class="fas fa-dollar-sign"></i>
                    </div>
                    <div class="stats-number">$<%= (stats.totalSpent || 0).toLocaleString() %></div>
                    <div class="stats-label">Total Spent</div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 mb-3">
                <div class="stats-card average">
                    <div class="icon">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <div class="stats-number">$<%= (stats.avgOrderValue || 0).toFixed(0) %></div>
                    <div class="stats-label">Avg Order Value</div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-9">
                <!-- Search and Filters -->
                <div class="search-filters">
                    <form method="GET" action="/vendors">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label class="form-label">Search Vendors</label>
                                <input type="text" class="form-control" name="search" 
                                       value="<%= filters.search %>" 
                                       placeholder="Search by name, code, or contact...">
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">Status</label>
                                <select class="form-select" name="status">
                                    <option value="all" <%= filters.status === 'all' ? 'selected' : '' %>>All</option>
                                    <option value="Active" <%= filters.status === 'Active' ? 'selected' : '' %>>Active</option>
                                    <option value="Inactive" <%= filters.status === 'Inactive' ? 'selected' : '' %>>Inactive</option>
                                    <option value="Pending Approval" <%= filters.status === 'Pending Approval' ? 'selected' : '' %>>Pending</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">Type</label>
                                <select class="form-select" name="vendorType">
                                    <option value="all" <%= filters.vendorType === 'all' ? 'selected' : '' %>>All Types</option>
                                    <option value="Seeds" <%= filters.vendorType === 'Seeds' ? 'selected' : '' %>>Seeds</option>
                                    <option value="Supplies" <%= filters.vendorType === 'Supplies' ? 'selected' : '' %>>Supplies</option>
                                    <option value="Equipment" <%= filters.vendorType === 'Equipment' ? 'selected' : '' %>>Equipment</option>
                                    <option value="Services" <%= filters.vendorType === 'Services' ? 'selected' : '' %>>Services</option>
                                    <option value="Organic Seeds" <%= filters.vendorType === 'Organic Seeds' ? 'selected' : '' %>>Organic Seeds</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">Sort By</label>
                                <select class="form-select" name="sortBy">
                                    <option value="vendorName" <%= filters.sortBy === 'vendorName' ? 'selected' : '' %>>Name</option>
                                    <option value="vendorCode" <%= filters.sortBy === 'vendorCode' ? 'selected' : '' %>>Code</option>
                                    <option value="createdAt" <%= filters.sortBy === 'createdAt' ? 'selected' : '' %>>Date Added</option>
                                    <option value="performance.lastOrderDate" <%= filters.sortBy === 'performance.lastOrderDate' ? 'selected' : '' %>>Last Order</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">&nbsp;</label>
                                <button type="submit" class="btn btn-primary d-block">
                                    <i class="fas fa-search"></i> Search
                                </button>
                            </div>
                        </div>
                    </form>
                </div>

                <!-- Expiring Certifications Alert -->
                <% if (expiringCerts && expiringCerts.length > 0) { %>
                <div class="alert alert-expiring mb-4">
                    <h5><i class="fas fa-exclamation-triangle"></i> Expiring Certifications</h5>
                    <p class="mb-2">The following vendors have certifications expiring within 30 days:</p>
                    <ul class="mb-0">
                        <% expiringCerts.forEach(cert => { %>
                        <li><strong><%= cert.vendorName %></strong> - <%= cert.certification.type %> expires on <%= new Date(cert.certification.expirationDate).toLocaleDateString() %></li>
                        <% }); %>
                    </ul>
                </div>
                <% } %>

                <!-- Vendors Table -->
                <div class="vendors-table-container">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Vendor</th>
                                    <th>Contact</th>
                                    <th>Performance</th>
                                    <th>Status</th>
                                    <th>Last Order</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (vendors && vendors.length > 0) { %>
                                    <% vendors.forEach(vendor => { %>
                                    <tr>
                                        <td>
                                            <div>
                                                <a href="/vendors/<%= vendor._id %>" class="vendor-name">
                                                    <%= vendor.displayName %>
                                                </a>
                                                <div class="vendor-code mt-1">
                                                    Type: <%= vendor.vendorType || 'N/A' %>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="contact-info">
                                                <% if (vendor.primaryContact || (vendor.contactInfo && vendor.contactInfo.primaryContact)) { %>
                                                    <% const primaryContact = vendor.primaryContact || vendor.contactInfo.primaryContact %>
                                                    <div><%= primaryContact.name || 'N/A' %></div>
                                                    <div class="text-muted">
                                                        <% if (primaryContact.email) { %>
                                                            <i class="fas fa-envelope"></i> <%= primaryContact.email %>
                                                        <% } %>
                                                    </div>
                                                    <div class="text-muted">
                                                        <% if (vendor.mainPhone) { %>
                                                            <i class="fas fa-phone"></i> <%= vendor.mainPhone %>
                                                        <% } else if (primaryContact.phone) { %>
                                                            <i class="fas fa-phone"></i> <%= primaryContact.phone %>
                                                        <% } %>
                                                    </div>
                                                <% } else { %>
                                                    <span class="text-muted">No contact info</span>
                                                <% } %>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="performance-metrics">
                                                <div class="metric">
                                                    <div class="metric-value"><%= vendor.performance.totalOrders || 0 %></div>
                                                    <div class="metric-label">Orders</div>
                                                </div>
                                                <div class="metric">
                                                    <div class="metric-value">$<%= ((vendor.performance.totalSpent || 0) / 1000).toFixed(0) %>k</div>
                                                    <div class="metric-label">Spent</div>
                                                </div>
                                                <div class="metric">
                                                    <div class="metric-value"><%= vendor.performance.overallRating || 'N/A' %></div>
                                                    <div class="metric-label">Rating</div>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="status-badge status-<%= (vendor.status || 'active').toLowerCase().replace(' ', '-') %>">
                                                <%= vendor.status || 'Active' %>
                                            </span>
                                        </td>
                                        <td>
                                            <% if (vendor.performance && vendor.performance.lastOrderDate) { %>
                                                <%= new Date(vendor.performance.lastOrderDate).toLocaleDateString() %>
                                                <div class="text-muted small">
                                                    <%= vendor.daysSinceLastOrder ? vendor.daysSinceLastOrder + ' days ago' : '' %>
                                                </div>
                                            <% } else { %>
                                                <span class="text-muted">Never</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a href="/vendors/<%= vendor._id %>" class="btn btn-outline-primary">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="/vendors/<%= vendor._id %>/edit" class="btn btn-outline-secondary">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="7" class="text-center py-4">
                                            <div class="text-muted">
                                                <i class="fas fa-inbox fa-2x mb-3"></i>
                                                <div>No vendors found</div>
                                                <div class="mt-2">
                                                    <a href="/vendors/new" class="btn btn-primary">Add Your First Vendor</a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    <% if (pagination.totalPages > 1) { %>
                    <nav class="d-flex justify-content-center mt-4 pb-4">
                        <ul class="pagination">
                            <li class="page-item <%= !pagination.hasPrev ? 'disabled' : '' %>">
                                <a class="page-link" href="?page=<%= pagination.currentPage - 1 %>&search=<%= filters.search %>&status=<%= filters.status %>&vendorType=<%= filters.vendorType %>&sortBy=<%= filters.sortBy %>">
                                    <i class="fas fa-chevron-left"></i>
                                </a>
                            </li>
                            <% for (let i = Math.max(1, pagination.currentPage - 2); i <= Math.min(pagination.totalPages, pagination.currentPage + 2); i++) { %>
                                <li class="page-item <%= i === pagination.currentPage ? 'active' : '' %>">
                                    <a class="page-link" href="?page=<%= i %>&search=<%= filters.search %>&status=<%= filters.status %>&vendorType=<%= filters.vendorType %>&sortBy=<%= filters.sortBy %>">
                                        <%= i %>
                                    </a>
                                </li>
                            <% } %>
                            <li class="page-item <%= !pagination.hasNext ? 'disabled' : '' %>">
                                <a class="page-link" href="?page=<%= pagination.currentPage + 1 %>&search=<%= filters.search %>&status=<%= filters.status %>&vendorType=<%= filters.vendorType %>&sortBy=<%= filters.sortBy %>">
                                    <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                    <% } %>
                </div>
            </div>

            <!-- Sidebar with Quick Stats -->
            <div class="col-lg-3">
                <!-- Vendor Type Breakdown -->
                <div class="quick-stats">
                    <h5><i class="fas fa-chart-pie"></i> Vendor Types</h5>
                    <% if (vendorTypeStats && vendorTypeStats.length > 0) { %>
                        <% vendorTypeStats.forEach(type => { %>
                        <div class="type-stat">
                            <span><%= type._id || 'Unknown' %></span>
                            <span>
                                <strong><%= type.count %></strong>
                                <small class="text-muted">($<%= (type.totalSpent || 0).toLocaleString() %>)</small>
                            </span>
                        </div>
                        <% }); %>
                    <% } else { %>
                        <p class="text-muted">No data available</p>
                    <% } %>
                </div>

                <!-- Recent Activity -->
                <div class="quick-stats">
                    <h5><i class="fas fa-clock"></i> Recent Activity</h5>
                    <div class="recent-activity">
                        <% if (recentActivity && recentActivity.length > 0) { %>
                            <% recentActivity.forEach(activity => { %>
                            <div class="activity-item">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <strong><%= activity.vendorName %></strong>
                                        <div class="text-muted small">
                                            <%= activity.vendorCode %> • <%= activity.status %>
                                        </div>
                                    </div>
                                    <div class="text-muted small">
                                        <%= new Date(activity.updatedAt).toLocaleDateString() %>
                                    </div>
                                </div>
                                <% if (activity.lastUpdatedBy) { %>
                                <div class="text-muted small">
                                    Updated by <%= activity.lastUpdatedBy %>
                                </div>
                                <% } %>
                            </div>
                            <% }); %>
                        <% } else { %>
                            <p class="text-muted">No recent activity</p>
                        <% } %>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="quick-stats">
                    <h5><i class="fas fa-bolt"></i> Quick Actions</h5>
                    <div class="d-grid gap-2">
                        <a href="/vendors/new" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Add Vendor
                        </a>
                        <a href="/vendors/api/stats" class="btn btn-outline-secondary" target="_blank">
                            <i class="fas fa-download"></i> Export Stats
                        </a>
                        <a href="/purchase-orders" class="btn btn-outline-secondary">
                            <i class="fas fa-file-invoice"></i> View POs
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function openNetSuiteImportModal() {
            // Placeholder for NetSuite import functionality
            alert('NetSuite PO Form import functionality would be implemented here');
        }

        // Auto-submit search form on input changes
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.querySelector('input[name="search"]');
            const filterSelects = document.querySelectorAll('select[name="status"], select[name="vendorType"], select[name="sortBy"]');
            
            let searchTimeout;
            
            searchInput.addEventListener('input', function() {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(() => {
                    this.form.submit();
                }, 500);
            });
            
            filterSelects.forEach(select => {
                select.addEventListener('change', function() {
                    this.form.submit();
                });
            });
        });

        // Show success/error messages
        const urlParams = new URLSearchParams(window.location.search);
        if (urlParams.get('success')) {
            const alertDiv = document.createElement('div');
            alertDiv.className = 'alert alert-success alert-dismissible fade show';
            alertDiv.innerHTML = `
                <i class="fas fa-check-circle"></i> Operation completed successfully!
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            document.querySelector('.container-fluid').insertBefore(alertDiv, document.querySelector('.row'));
        }
    </script>

    <%- include('partials/navigation-scripts') %>
</body>

</html>
