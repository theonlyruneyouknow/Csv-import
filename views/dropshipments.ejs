        async function applyBulkUpdates() {
            if (!window.parsedBulkData || !window.currentShipments) {
                alert('No data to apply');
                return;
            }

            // Show loading on button
            const applyBtn = document.getElementById('applyBulkBtn');
            const originalBtnText = applyBtn.innerHTML;
            applyBtn.innerHTML = '‚è≥ Processing...';
            applyBtn.disabled = true;

            const updates = [];
            let matched = 0;
            let notFound = [];

            console.log('Current shipments:', window.currentShipments);
            console.log('Parsed data:', window.parsedBulkData);

            // Match parsed data with current shipments
            window.parsedBulkData.forEach(parsed => {
                // Normalize tracking number for matching (trim, uppercase)
                const normalizedParsed = parsed.trackingNumber.trim().toUpperCase();

                const shipment = window.currentShipments.find(s => {
                    const normalizedShipment = s.trackingNumber.trim().toUpperCase();
                    return normalizedShipment === normalizedParsed;
                });

                if (shipment) {
                    updates.push({
                        id: shipment.id,
                        trackingNumber: shipment.trackingNumber,
                        status: parsed.status,
                        location: parsed.location,
                        notes: parsed.notes
                    });
                    matched++;
                } else {
                    notFound.push(parsed.trackingNumber);
                }
            });

            console.log('Matches found:', matched);
            console.log('Not found:', notFound);

            if (updates.length === 0) {
                applyBtn.innerHTML = originalBtnText;
                applyBtn.disabled = false;
                alert(`No matching tracking numbers found in current shipments.\n\nSearching for:\n${window.parsedBulkData.map(p => p.trackingNumber).join(', ')}\n\nAvailable tracking numbers:\n${window.currentShipments.map(s => s.trackingNumber).join(', ')}`);
                return;
            }

            if (notFound.length > 0) {
                if (!confirm(`Found ${matched} matching shipment(s). ${notFound.length} tracking number(s) not found:\n${notFound.join(', ')}\n\nContinue with updates?`)) {
                    applyBtn.innerHTML = originalBtnText;
                    applyBtn.disabled = false;
                    return;
                }
            }

            // Apply updates with progress indicator
            let successCount = 0;
            let errorCount = 0;
            const totalUpdates = updates.length;

            for (let i = 0; i < updates.length; i++) {
                const update = updates[i];

                // Update progress
                applyBtn.innerHTML = `‚è≥ Updating ${i + 1}/${totalUpdates}...`;

                try {
                    const response = await fetch(`/dropshipments/api/dropshipments/${update.id}/update-status`, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({
                            status: update.status,
                            location: update.location,
                            notes: update.notes || `Bulk update from ${window.currentCarrier} tracking check`
                        })
                    });

                    const result = await response.json();
                    if (result.success) {
                        successCount++;
                    } else {
                        errorCount++;
                    }
                } catch (error) {
                    console.error('Error updating shipment:', error);
                    errorCount++;
                }
            }

            // Restore button
            applyBtn.innerHTML = originalBtnText;
            applyBtn.disabled = false;

            alert(`‚úÖ Bulk update complete!\n\nSuccessfully updated: ${successCount}\nErrors: ${errorCount}`);

            closeBulkUpdateModal();
            loadDropshipments(); // Refresh the table
        }

