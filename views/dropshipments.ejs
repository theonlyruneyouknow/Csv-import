        function parseTrackingData() {
            const data = document.getElementById('bulkTrackingData').value.trim();
            if (!data) {
                alert('Please paste tracking data first');
                return;
            }

            // Show parsing indicator
            const previewBtn = document.querySelector('.preview-btn');
            const originalBtnText = previewBtn.innerHTML;
            previewBtn.innerHTML = '‚è≥ Parsing...';
            previewBtn.disabled = true;

            const lines = data.split('\n').filter(line => line.trim());
            const parsed = [];

            // Detect CSV format (FedEx, UPS, or USPS)
            // Check USPS first since it has more specific column names
            const firstLine = lines[0] ? lines[0].toUpperCase() : '';
            const isFedExCSV = firstLine.includes('TRACKING ID');
            const isUSPSCSV = firstLine.includes('LATEST UPDATE') || firstLine.includes('EXPECTED DELIVERY');
            const isUPSCSV = !isUSPSCSV && (firstLine.includes('TRACKING NUMBER') || firstLine.includes('TRACKING#'));
            
            console.log('First line:', firstLine);
            console.log('Format detection:', { isFedExCSV, isUPSCSV, isUSPSCSV });

            if (isFedExCSV) {
                console.log('Detected FedEx CSV format');

                // Parse CSV properly (handle quoted fields with commas)
                for (let i = 1; i < lines.length; i++) {
                    const line = lines[i].trim();
                    if (!line) continue;

                    // Parse CSV line respecting quotes
                    const parts = parseCSVLine(line);

                    if (parts.length >= 5) {
                        const trackingNumber = parts[0];
                        const shipDate = parts[1];
                        const shipper = parts[2];
                        const recipient = parts[3];
                        const statusText = parts[4];
                        const deliveredDate = parts[5] || '';
                        const scheduledDate = parts[6] || '';
                        const service = parts[7] || 'FedEx';

                        if (trackingNumber && /^\d{12,}$/.test(trackingNumber)) {
                            // Determine status
                            let status = 'In Transit';
                            if (statusText.toLowerCase().includes('delivered')) {
                                status = 'Delivered';
                            } else if (statusText.toLowerCase().includes('on the way') || statusText.toLowerCase().includes('in transit')) {
                                status = 'In Transit';
                            } else if (statusText.toLowerCase().includes('out for delivery')) {
                                status = 'Out for Delivery';
                            } else if (statusText.toLowerCase().includes('exception')) {
                                status = 'Exception';
                            } else if (statusText.toLowerCase().includes('picked up') || statusText.toLowerCase().includes('shipped')) {
                                status = 'Shipped';
                            }

                            // Build notes
                            let notes = service;
                            if (deliveredDate) {
                                notes += ` - Delivered: ${deliveredDate}`;
                            } else if (scheduledDate) {
                                notes += ` - Scheduled: ${scheduledDate}`;
                            }

                            parsed.push({
                                trackingNumber: trackingNumber,
                                status: status,
                                location: recipient,
                                notes: notes.trim()
                            });
                        }
                    }
                }
            } else if (isUPSCSV) {
                console.log('Detected UPS CSV format');

                // Parse UPS CSV
                for (let i = 1; i < lines.length; i++) {
                    const line = lines[i].trim();
                    if (!line) continue;

                    // Parse CSV line respecting quotes
                    const parts = parseCSVLine(line);

                    if (parts.length >= 2) {
                        const trackingNumber = parts[0];
                        const statusText = parts[1];
                        const location = parts[2] || '';
                        const lastUpdate = parts[3] || '';

                        if (trackingNumber && /^1Z[A-Z0-9]{16}$/.test(trackingNumber)) {
                            // Determine status
                            let status = 'In Transit';
                            if (statusText.toLowerCase().includes('delivered')) {
                                status = 'Delivered';
                            } else if (statusText.toLowerCase().includes('in transit') || statusText.toLowerCase().includes('on the way')) {
                                status = 'In Transit';
