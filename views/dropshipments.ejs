        function parseCSV(csvData) {
            const lines = csvData.split('\n').filter(line => line.trim());
            const parsed = [];

            // Skip header if it exists
            const startIndex = lines[0].toLowerCase().includes('tracking') ? 1 : 0;

            for (let i = startIndex; i < lines.length; i++) {
                // Split by comma and remove quotes from start/end of each field
                const parts = lines[i].split(',').map(p => {
                    return p.trim().replace(/^["']|["']$/g, '');
                });

                // Must have a tracking number (at least 10 characters)
                if (parts[0] && parts[0].length >= 10) {
                    parsed.push({
                        trackingNumber: parts[0],
                        status: parts[1] || 'In Transit',
                        location: parts[2] || '',
                        notes: parts[3] || ''
                    });
                }
            }

            if (parsed.length === 0) {
                alert('No valid tracking data found in file.');
                return;
            }

            console.log('Parsed CSV data:', parsed);
            window.parsedBulkData = parsed;
            showPreview(parsed);
        }

