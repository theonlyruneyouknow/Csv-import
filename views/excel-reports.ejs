    <div class="toast" id="toast"></div>

    <script>
        let allSavedConfigs = [];
        const currentUser = <%- JSON.stringify(user) %>;

        // Update server time every second (Pacific Time)
        function updateServerTime() {
            const now = new Date();
            const timeStr = now.toLocaleTimeString('en-US', {
                timeZone: 'America/Los_Angeles',
                hour: '2-digit',
                minute: '2-digit',
                second: '2-digit',
                hour12: true
            });
            document.getElementById('serverTime').textContent = timeStr + ' PT';
        }
        setInterval(updateServerTime, 1000);
        updateServerTime();

        // Calculate next update time (Pacific Time)
        function updateNextUpdateTime() {
            const now = new Date();
            const next = new Date(now);
            next.setHours(now.getHours() + 1, 0, 0, 0);
            
            const diff = next - now;
            const minutes = Math.floor(diff / 60000);
            
            const timeStr = next.toLocaleTimeString('en-US', {
                timeZone: 'America/Los_Angeles',
                hour: '2-digit',
                minute: '2-digit',
                hour12: true
            });
            document.getElementById('nextUpdate').textContent = 
                `${timeStr} PT (in ${minutes} min)`;
        }
        setInterval(updateNextUpdateTime, 30000);
        updateNextUpdateTime();

        // Load report status
        async function loadReportStatus() {
            try {
                const response = await fetch('/api/excel-reports/status');
                const data = await response.json();
                
                if (data.success) {
                    // Update last update time
                    const lastUpdateTime = new Date(data.lastUpdate).toLocaleTimeString('en-US', {
                        timeZone: 'America/Los_Angeles',
                        hour: '2-digit',
                        minute: '2-digit',
                        second: '2-digit',
                        hour12: true
                    });
                    document.getElementById('lastUpdate').textContent = lastUpdateTime + ' PT';
                    
                    // Update each report
                    updateReportCard('main', data.reports.main);
                    updateReportCard('unreceived', data.reports.unreceived);
                    updateReportCard('approval', data.reports.approval);
                }
            } catch (error) {
                console.error('Error loading report status:', error);
            }
        }

        function updateReportCard(type, data) {
            if (data.exists) {
                document.getElementById(`size-${type}`).textContent = data.size;
                document.getElementById(`time-${type}`).textContent = data.timestamp;
                
                // Update dimensions if element exists
                const dimsEl = document.getElementById(`dims-${type}`);
                if (dimsEl) {
                    if (data.rows >= 0 && data.columns >= 0) {
                        dimsEl.textContent = `${data.rows} √ó ${data.columns}`;
                        dimsEl.style.color = data.rows === 0 ? '#ef4444' : '#10b981';
                    } else {
                        dimsEl.textContent = 'N/A';
                    }
                }
                
                document.getElementById(`status-${type}`).textContent = 'Ready';
                document.getElementById(`status-${type}`).className = 'status-badge status-ready';
            } else {
                document.getElementById(`status-${type}`).textContent = 'Not Generated';
                document.getElementById(`status-${type}`).className = 'status-badge status-error';
            }
        }

        // Copy URL to clipboard
        function copyUrl(inputId) {
            const input = document.getElementById(inputId);
            input.select();
            document.execCommand('copy');
            showToast('‚úÖ URL copied to clipboard!');
        }

        // Refresh report
        async function refreshReport(type) {
            const button = event.target.closest('button');
            const originalContent = button.innerHTML;
            
            button.disabled = true;
            button.innerHTML = '<div class="spinner"></div> Generating...';
            
            const statusBadge = document.getElementById(`status-${type}`);
            statusBadge.textContent = 'Generating';
            statusBadge.className = 'status-badge status-generating';
            
            try {
                const response = await fetch(`/api/excel-reports/refresh/${type}`, {
                    method: 'POST'
                });
                
                const data = await response.json();
                
                if (data.success) {
                    showToast(`‚úÖ ${data.message}`);
                    updateReportCard(type, data.report);
                    
                    // Update last update time
                    const updateTime = new Date().toLocaleTimeString('en-US', {
                        timeZone: 'America/Los_Angeles',
                        hour: '2-digit',
                        minute: '2-digit',
                        second: '2-digit',
                        hour12: true
                    });
                    document.getElementById('lastUpdate').textContent = updateTime + ' PT';
                } else {
                    showToast(`‚ùå Error: ${data.error}`);
                    statusBadge.textContent = 'Error';
                    statusBadge.className = 'status-badge status-error';
                }
            } catch (error) {
                showToast('‚ùå Error refreshing report');
                console.error(error);
                statusBadge.textContent = 'Error';
                statusBadge.className = 'status-badge status-error';
            } finally {
                button.disabled = false;
                button.innerHTML = originalContent;
            }
        }

        // Download report
        function downloadReport(type) {
            const urls = {
                'main': '<%= baseUrl %>/purchase-orders/download/latest-excel',
                'unreceived': '<%= baseUrl %>/purchase-orders/reports/unreceived-items',
                'approval': '<%= baseUrl %>/purchase-orders/reports/waiting-for-approval'
            };
            
            window.location.href = urls[type];
            showToast('üì• Download started...');
        }

        // Show toast notification
        function showToast(message) {
            const toast = document.getElementById('toast');
            toast.textContent = message;
            toast.style.display = 'block';
            
            setTimeout(() => {
                toast.style.display = 'none';
            }, 3000);
        }

        // ============= SAVED REPORT CONFIGURATIONS =============

        // Load all saved configurations
        async function loadSavedConfigs() {
            const container = document.getElementById('savedConfigsContainer');
            
            try {
                const types = ['unreceived-items', 'waiting-for-approval'];
                let allConfigs = [];

                for (const type of types) {
                    try {
                        const response = await fetch(`/api/report-configs/${type}`);
                        
                        if (!response.ok) {
                            console.error(`Failed to fetch ${type} configs:`, response.status, response.statusText);
                            continue;
                        }
                        
                        const data = await response.json();
                        console.log(`Loaded ${type} configs:`, data);
                        
                        if (data.success && data.configs && Array.isArray(data.configs)) {
                            allConfigs = allConfigs.concat(data.configs.map(c => ({...c, reportType: type})));
                        } else {
                            console.warn(`Invalid response structure for ${type}:`, data);
                        }
                    } catch (typeError) {
                        console.error(`Error fetching ${type} configs:`, typeError);
                    }
                }

                console.log(`Total configs loaded: ${allConfigs.length}`, allConfigs);
                allSavedConfigs = allConfigs;
                renderSavedConfigs();
                
            } catch (error) {
                console.error('Error loading saved configs:', error);
                container.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-state-icon">‚ö†Ô∏è</div>
                        <h3 style="color: #2d3748; margin-bottom: 10px;">Error Loading Configurations</h3>
                        <p>${error.message || 'Failed to load configurations'}</p>
                        <button class="btn btn-refresh" onclick="loadSavedConfigs()" style="margin-top: 15px;">
                            üîÑ Retry
                        </button>
                    </div>
                `;
            }
        }

        // Render saved configurations
        function renderSavedConfigs() {
            const container = document.getElementById('savedConfigsContainer');

            if (allSavedConfigs.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-state-icon">üìä</div>
                        <h3 style="color: #2d3748; margin-bottom: 10px;">No Saved Configurations</h3>
                        <p>Create custom report configurations from the Unreceived Items or Waiting for Approval pages.</p>
                        <p style="margin-top: 10px;">Or click "Import from Browser Storage" above to migrate old favorites.</p>
                    </div>
                `;
                return;
            }

            const configsHtml = allSavedConfigs.map(config => {
                const reportLabel = config.reportType === 'unreceived-items' ? 'Unreceived Items' : 'Waiting for Approval';
                const isPublic = config.isPublic;
                const canGenerate = true; // Everyone can generate from any config they can see

                return `
                    <div class="config-card">
                        <div class="config-info">
                            <div class="config-name">
                                ${escapeHtml(config.name)}
                                <span class="config-badge ${isPublic ? 'badge-public' : 'badge-private'}">
                                    ${isPublic ? 'üåê Public' : 'üîí Private'}
                                </span>
                            </div>
                            ${config.description ? `<p style="color: #718096; font-size: 14px; margin-top: 5px;">${escapeHtml(config.description)}</p>` : ''}
                            <div class="config-meta">
                                <span>üìã ${reportLabel}</span>
                                <span>üë§ by ${escapeHtml(config.createdByUsername)}</span>
                                ${config.usageCount > 0 ? `<span>üìä Used ${config.usageCount} times</span>` : ''}
                            </div>
                        </div>
                        <div class="config-actions">
                            <button class="btn btn-download btn-small" onclick="generateExcelFromConfig('${config._id}')">
                                <span>üì•</span> Generate Excel
                            </button>
                        </div>
                    </div>
                `;
            }).join('');

            container.innerHTML = `<div class="configs-grid">${configsHtml}</div>`;
        }

        // Generate Excel file from a saved configuration
        async function generateExcelFromConfig(configId) {
            try {
                showToast('üîÑ Generating Excel file from configuration...');

                const response = await fetch(`/api/excel-reports/generate-from-config/${configId}`, {
                    method: 'POST'
                });

                if (response.ok) {
                    const blob = await response.blob();
                    const url = window.URL.createObjectURL(blob);
                    const a = document.createElement('a');
                    a.href = url;
                    
                    // Get filename from Content-Disposition header
                    const contentDisposition = response.headers.get('Content-Disposition');
                    let filename = 'report.xlsx';
                    if (contentDisposition) {
                        const matches = /filename[^;=\n]*=((['"]).*?\2|[^;\n]*)/.exec(contentDisposition);
                        if (matches && matches[1]) {
                            filename = matches[1].replace(/['"]/g, '');
                        }
                    }
                    
                    a.download = filename;
                    document.body.appendChild(a);
                    a.click();
                    window.URL.revokeObjectURL(url);
                    document.body.removeChild(a);

                    showToast('‚úÖ Excel file downloaded successfully!');
                } else {
                    const error = await response.json();
                    showToast(`‚ùå Error: ${error.error || 'Failed to generate Excel'}`);
                }
            } catch (error) {
                console.error('Error generating Excel:', error);
                showToast('‚ùå Error generating Excel file');
            }
        }

        // Check and migrate from localStorage
        async function checkAndMigrateLocalStorage() {
            const types = [
                { key: 'unreceivedItemsFavorites', reportType: 'unreceived-items', label: 'Unreceived Items' },
                { key: 'waitingForApprovalFavorites', reportType: 'waiting-for-approval', label: 'Waiting for Approval' }
            ];

            let totalFound = 0;
            let allFavorites = [];

            for (const type of types) {
                const favorites = JSON.parse(localStorage.getItem(type.key) || '[]');
                if (favorites.length > 0) {
                    totalFound += favorites.length;
                    allFavorites.push({ ...type, favorites });
                }
            }

            if (totalFound === 0) {
                showToast('‚ÑπÔ∏è No configurations found in browser storage');
                return;
            }

            if (!confirm(`Found ${totalFound} configuration(s) in browser storage.\n\nMigrate them to the database?\nThis will make them accessible from any computer.`)) {
                return;
            }

            let migrated = 0;
            let errors = 0;

            for (const typeData of allFavorites) {
                try {
                    const response = await fetch('/api/report-configs/migrate-from-localstorage', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({
                            reportType: typeData.reportType,
                            favorites: typeData.favorites
                        })
                    });

                    const data = await response.json();
                    if (data.success) {
                        migrated += data.results.success;
                        errors += data.results.errors.length;
                    }
                } catch (error) {
                    console.error('Migration error:', error);
                    errors++;
                }
            }

            if (migrated > 0) {
                showToast(`‚úÖ Migrated ${migrated} configuration(s) successfully!`);
                
                if (confirm('Migration successful! Clear browser storage?')) {
                    for (const type of types) {
                        localStorage.removeItem(type.key);
                        localStorage.setItem(`${type.reportType}MigrationDone`, 'true');
                    }
                    showToast('‚úÖ Browser storage cleared');
                }

                // Reload configs
                await loadSavedConfigs();
            } else {
                showToast(`‚ö†Ô∏è Migration completed with ${errors} error(s)`);
            }
        }

        // Load auto-updating reports
