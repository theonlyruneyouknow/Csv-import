                                        <input type="text" 
                                               readonly 
                                               value="${window.location.origin}${report.urlPath}"
                                               class="url-input"
                                               id="autoUrl${report._id}">
                                        <button class="btn btn-copy" onclick="copyAutoReportUrl('${report._id}')">
                                            <span>üìã</span> Copy
