        // Copy auto-report URL to clipboard
        function copyAutoReportUrl(reportId) {
            const input = document.getElementById('autoUrl' + reportId);
            input.select();
            input.setSelectionRange(0, 99999);
            document.execCommand('copy');
            showToast('URL copied to clipboard! üìã');
        }

        // Download auto-report
        function downloadAutoReport(urlPath, filename) {
            const url = window.location.origin + urlPath;
            const link = document.createElement('a');
            link.href = url;
            link.download = filename;
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
            showToast('Downloading report... ‚¨áÔ∏è');
        }

        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        // Load initial status
        loadReportStatus();
        loadAutoReports();
        loadSavedConfigs();
        
        // Refresh status every 30 seconds
        setInterval(loadReportStatus, 30000);
        // Refresh auto-reports every 60 seconds
        setInterval(loadAutoReports, 60000);
        // Refresh configs every 60 seconds
        setInterval(loadSavedConfigs, 60000);
    </script>
